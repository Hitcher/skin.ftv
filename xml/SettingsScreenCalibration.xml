<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- screencalibration -->
	<defaultcontrol>8</defaultcontrol>
	<controls>
		<!-- Help information -->
		<control type="label" id="3">
			<include>HiddenControl</include>
		</control>
		<!-- Video window -->
		<control type="videowindow">
			<include>FullscreenDimensions</include>
			<visible>Player.HasVideo</visible>
			<visible>!Slideshow.IsActive</visible>
		</control>
		<!-- background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>special://skin/extras/backgrounds/calibration.png</texture>
			<visible>Control.HasFocus(8) | Control.HasFocus(9)</visible>
		</control>
		<!-- Top left mover -->
		<control type="mover" id="8">
			<width>236</width>
			<height>236</height>
			<texturefocus>calibrate/focus.png</texturefocus>
			<texturenofocus/>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up"/>
				<eventconfig type="down"/>
				<eventconfig type="left"/>
				<eventconfig type="right"/>
			</movingspeed>
		</control>
		<!-- Bottom right mover -->
		<control type="mover" id="9">
			<width>236</width>
			<height>236</height>
			<texturefocus flipx="true" flipy="true">calibrate/focus.png</texturefocus>
			<texturenofocus/>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up"/>
				<eventconfig type="down"/>
				<eventconfig type="left"/>
				<eventconfig type="right"/>
			</movingspeed>
		</control>
		<!-- Subtitle position mover -->
		<control type="mover" id="10">
			<width>396</width>
			<height>88</height>
			<texturefocus>calibrate/subtitle.png</texturefocus>
			<texturenofocus/>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up"/>
				<eventconfig type="down"/>
			</movingspeed>
		</control>
		<!-- Pixel aspect ratio box -->
		<control type="resize" id="11">
			<texturefocus>calibrate/square.png</texturefocus>
			<texturenofocus/>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="left"/>
				<eventconfig type="right"/>
			</movingspeed>
		</control>
		<!-- Reset calibration mover -->
		<control type="mover" id="12">
			<include>HiddenControl</include>
		</control>
		<!-- Help information -->
		<control type="label">
			<left>614</left>
			<top>302</top>
			<height>400</height>
			<width>692</width>
			<font>Light60</font>
			<aligny>top</aligny>
			<label>$VAR[CalibrationLabel]</label>
			<wrapmultiline>true</wrapmultiline>
			<textcolor>ffdadada</textcolor>
			<animation condition="Control.HasFocus(11)" effect="slide" end="0,-60" start="0,0">Conditional</animation>
			<animation condition="Control.HasFocus(12)" effect="slide" end="0,120" start="0,0">Conditional</animation>
		</control>
		<!-- Calibration info label -->
		<control type="label" id="2">
			<left>614</left>
			<top>574</top>
			<height>42</height>
			<width>1200</width>
			<font>Light39</font>
			<textcolor>ffdadada</textcolor>
			<animation condition="Control.HasFocus(11)" effect="slide" end="0,120" start="0,0">Conditional</animation>
			<visible>!Control.HasFocus(12)</visible>
		</control>
		<!-- Coordinates label -->
		<control type="label" id="4">
			<left>614</left>
			<top>622</top>
			<height>42</height>
			<width>1200</width>
			<font>Light39</font>
			<textcolor>ffdadada</textcolor>
			<animation condition="Control.HasFocus(11)" effect="slide" end="0,120" start="0,0">Conditional</animation>
			<visible>!Control.HasFocus(12)</visible>
		</control>
		<!-- Reset label -->
		<control type="label">
			<left>614</left>
			<top>576</top>
			<height>84</height>
			<width>600</width>
			<font>Light39</font>
			<textcolor>ffdadada</textcolor>
			<wrapmultiline>true</wrapmultiline>
			<label>$LOCALIZE[31037]</label>
			<visible>Control.HasFocus(12)</visible>
		</control>
	</controls>
</window>
