<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="label" id="200">
			<include>HiddenControl</include>
		</control>
		<control type="list" id="110">
			<right>396</right>
			<top>268</top>
			<width>1140</width>
			<height>930</height>
			<scrolltime>0</scrolltime>
			<itemlayout height="310">
				<control type="textbox">
					<height>310</height>
					<align>right</align>
					<aligny>top</aligny>
					<font>Med40Spaced</font>
					<textcolor>88dadada</textcolor>
					<autoscroll>False</autoscroll>
					<label>$INFO[ListItem.Label]</label>
					<visible>!String.IsEqual(ListItem.Label,...)</visible>
				</control>
				<control type="image">
					<right>336</right>
					<top>0</top>
					<width>124</width>
					<height>124</height>
					<texture>views/equaliser.png</texture>
					<visible>String.IsEqual(ListItem.Label,...) | String.IsEmpty(ListItem.Label)</visible>
					<animation effect="fade" end="55" condition="true">Conditional</animation>
				</control>
			</itemlayout>
			<focusedlayout height="310">
				<control type="textbox">
					<height>310</height>
					<align>right</align>
					<aligny>top</aligny>
					<font>Med40Spaced</font>
					<textcolor>ffdadada</textcolor>
					<autoscroll>False</autoscroll>
					<label>$INFO[ListItem.Label]</label>
					<visible>!String.IsEqual(ListItem.Label,...)</visible>
				</control>
				<control type="image">
					<right>336</right>
					<top>0</top>
					<width>124</width>
					<height>124</height>
					<texture>views/equaliser.gif</texture>
					<visible>String.IsEqual(ListItem.Label,...) | String.IsEmpty(ListItem.Label)</visible>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>
