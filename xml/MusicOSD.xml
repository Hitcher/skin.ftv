<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<onload condition="!Skin.HasSetting(HideOSDControls)">SetFocus(304)</onload>
	<onload condition="Skin.HasSetting(HideOSDControls)">SetFocus(11)</onload>
	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(visualisationpresetlist) | Window.IsVisible(addonsettings) | Window.IsVisible(selectdialog)">Conditional</animation>
			<control type="image">
				<width>3840</width>
				<height>420</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>3840</width>
				<height>1440</height>
				<texture border="1">osd/mask_bottom.png</texture>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>3960</width>
				<height>240</height>
				<texture>osd/mask.png</texture>
				<visible>Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="grouplist">
				<left>40</left>
				<top>128</top>
				<width>3760</width>
				<height>100</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Artist title -->
				<control type="label">
					<width>auto</width>
					<height>100</height>
					<font>OSD40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<label>$INFO[MusicPlayer.Title]</label>
				</control>
			</control>
			<!--  Song title -->
			<control type="label">
				<left>40</left>
				<top>260</top>
				<width>3760</width>
				<height>80</height>
				<align>center</align>
				<font>OSD32</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ShadowColour</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
			</control>
			<!--  Progress bar -->
			<control id="99" type="progress">
				<left>184</left>
				<bottom>186</bottom>
				<width>3470</width>
				<height>24</height>
				<info>Player.Progress</info>
				<texturebg border="12">osd/progress_bar_back.png</texturebg>
				<lefttexture />
				<midtexture border="12">osd/progress_bar.png</midtexture>
				<righttexture />
				<overlaytexture />
			</control>
			<control type="grouplist">
				<left>184</left>
				<bottom>88</bottom>
				<width>1600</width>
				<height>60</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>68</height>
					<font>OSD32</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>68</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>68</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
			</control>
			<control id="300" type="grouplist">
				<centerleft>50%</centerleft>
				<bottom>52</bottom>
				<width>1600</width>
				<height>128</height>
				<onup>11</onup>
				<itemgap>0</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">204</defaultcontrol>
				<visible>!Skin.HasSetting(HideOSDControls)</visible>
				<!-- Skip Back -->
				<control type="button" id="301">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_prev_fo.png</texturefocus>
					<texturenofocus>osd/osd_prev_nf.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="302">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_rw_fo.png</texturefocus>
					<texturenofocus>osd/osd_rw_nf.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="303">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_stop_fo.png</texturefocus>
					<texturenofocus>osd/osd_stop_nf.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Play/Pause -->
				<control type="togglebutton" id="304">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_pause_fo.png</texturefocus>
					<texturenofocus>osd/osd_pause_nf.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/osd_play_fo.png</alttexturefocus>
					<alttexturenofocus>osd/osd_play_nf.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="305">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_ff_fo.png</texturefocus>
					<texturenofocus>osd/osd_ff_nf.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="306">
					<width>128</width>
					<height>128</height>
					<font />
					<texturefocus>osd/osd_next_fo.png</texturefocus>
					<texturenofocus>osd/osd_next_nf.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>184</right>
				<bottom>88</bottom>
				<width>1600</width>
				<height>60</height>
				<font>OSD32</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time][COLOR ff696969] / $INFO[Player.FinishTime][/COLOR]</label>
			</control>
			<!-- Options -->
			<control id="100" type="grouplist">
				<left>184</left>
				<bottom>256</bottom>
				<width>1200</width>
				<height>1200</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>200</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
				<!-- Lyrics -->
				<control type="button" id="9">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>24013</label>
					<texturefocus />
					<texturenofocus />
					<onclick>Close</onclick>
					<onclick condition="!String.IsEmpty(Skin.String(LyricScript_Path))">RunScript($INFO[Skin.String(LyricScript_Path)])</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">Skin.SetAddon(LyricScript_Path,xbmc.python.lyrics)</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">Close</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">RunScript($INFO[Skin.String(LyricScript_Path)])</onclick>
				</control>
				<!-- Playlist -->
				<control type="button" id="10">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>559</label>
					<texturefocus />
					<texturenofocus />
					<onclick>Close</onclick>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
				</control>
				<!-- Repeat -->
				<control type="button" id="7">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[486]$INFO[Playlist.Repeat, : ]</label>
					<texturefocus />
					<texturenofocus />
					<onclick>PlayerControl(Repeat)</onclick>
				</control>
				<!-- Random -->
				<control type="togglebutton" id="8">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[590]$INFO[Playlist.Random, : ]</label>
					<texturefocus />
					<texturenofocus />
					<onclick>PlayerControl(Random)</onclick>
				</control>
			</control>
			<!-- Options -->
			<control id="200" type="grouplist">
				<right>184</right>
				<bottom>256</bottom>
				<width>1200</width>
				<height>1200</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>100</onleft>
				<onright>noop</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
				<!-- Visualisation -->
				<control type="button" id="501">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>31235</label>
					<texturefocus />
					<texturenofocus />
					<onclick>SetProperty(SetUserRating,music,home)</onclick>
					<onclick>setrating</onclick>
				</control>
				<!-- Visualisation -->
				<control type="button" id="500">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>12006</label>
					<texturefocus />
					<texturenofocus />
				</control>
				<!-- Visualisation presets list -->
				<control type="button" id="12">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[31047]</label>
					<texturefocus />
					<texturenofocus />
					<onclick>ActivateWindow(visualisationpresetlist)</onclick>
					<visible>Visualisation.HasPresets</visible>
				</control>
				<!-- Visualisation settings -->
				<control type="button" id="11">
					<width>1200</width>
					<height>116</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[250] $LOCALIZE[21417]</label>
					<texturefocus />
					<texturenofocus />
					<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>
