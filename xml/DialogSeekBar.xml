<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[Window.IsVisible(visualisation) | VideoPlayer.IsFullscreen] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
	<visible>!Player.HasGame</visible>
	<visible>!Player.FrameAdvance</visible>
	<controls>
		<control type="group">
			<visible>String.IsEmpty(Window(home).Property(ShowXRay)) + !Window.IsActive(videoosd) + !Window.IsActive(musicosd) + !Window.IsActive(subtitlesearch) + !Window.IsVisible(script-nextup-notification-NextUpInfo.xml)</visible>
			<control type="group">
				<visible>Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>
				<animation condition="System.IdleTime(4) + !Player.Caching" reversible="true" type="Conditional">
					<effect end="0" start="100" time="200" type="fade"/>
				</animation>
				<control type="image">
					<width>1980</width>
					<height>210</height>
					<texture border="1">osd/mask_top.png</texture>
				</control>
				<control type="grouplist">
					<left>20</left>
					<top>64</top>
					<width>1880</width>
					<height>50</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<!--  Movie title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[VideoPlayer.Title]</label>
						<visible>String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
					</control>
					<!--  TV Show title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[VideoPlayer.TVShowTitle]</label>
						<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
					</control>
					<!-- Season/Episode number -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<label>$VAR[PlayerEpisodeValue]</label>
					</control>
					<!--  Song title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[MusicPlayer.Title]</label>
						<visible>String.IsEmpty(MusicPlayer.Title)</visible>
					</control>
				</control>
				<!--  Episode title -->
				<control type="label">
					<left>20</left>
					<top>129</top>
					<width>1880</width>
					<height>80</height>
					<aligny>top</aligny>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  Artist / Album title -->
				<control type="label">
					<left>20</left>
					<top>130</top>
					<width>1880</width>
					<height>40</height>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
				</control>
				<!-- Pause -->
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>321</width>
					<height>341</height>
					<texture>osd/Pause.png</texture>
					<visible>Player.Paused + !Player.Caching + !Window.IsVisible(subtitlesearch)</visible>
					<animation condition="System.IdleTime(2)" reversible="true" type="Conditional">
						<effect end="0" start="100" time="200" type="fade"/>
					</animation>
				</control>
				<control type="group">
					<visible>Player.Caching</visible>
					<!-- Busy -->
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_outer.png</texture>
						<animation effect="rotate" end="-360" center="auto" time="1120" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_inner.png</texture>
						<animation effect="rotate" end="360" center="auto" time="1680" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>
				</control>
				<!--  Cache bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.ProgressCache</info>
					<texturebg border="4">osd/progress_back.png</texturebg>
					<lefttexture/>
					<midtexture border="4">osd/progress_cache.png</midtexture>
					<righttexture/>
					<overlaytexture/>
				</control>
				<!--  Progress bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<lefttexture/>
					<midtexture border="4">osd/progress_bar.png</midtexture>
					<righttexture/>
					<overlaytexture/>
				</control>
				<!--  Chapters -->
				<control type="ranges">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<info>Player.Chapters</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<righttexture border="2">osd/chapter.png</righttexture>
				</control>
				<control type="grouplist">
					<left>92</left>
					<bottom>37</bottom>
					<width>800</width>
					<height>40</height>
					<itemgap>2</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<!--  Current position -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>fff3f3f3</textcolor>
						<label>$VAR[PlayerTime]</label>
					</control>
					<!--  Divider -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>ff696969</textcolor>
						<label>/</label>
						<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
					</control>
					<!--  Total length -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>ff696969</textcolor>
						<label>$VAR[PlayerDuration]</label>
					</control>
					<!--  4K label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold36</font>
						<textcolor>ffebebeb</textcolor>
						<label>Ultra</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
					</control>
					<!--  4K label -->
					<control type="label">
						<left>6</left>
						<width>auto</width>
						<height>34</height>
						<font>Light35</font>
						<textcolor>ffebebeb</textcolor>
						<label>HD</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
					</control>
					<!--  HD label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold32</font>
						<textcolor>ffebebeb</textcolor>
						<label>[B]HD[/B]</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
					</control>
					<!--  Resolution label -->
					<control type="label">
						<left>2</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold31</font>
						<textcolor>ffebebeb</textcolor>
						<label>1080p</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
					</control>
					<!--  HDR label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold36</font>
						<textcolor>ffebebeb</textcolor>
						<label>HDR</label>
						<visible>String.Contains(Player.FileName,HDR)</visible>
					</control>
				</control>
				<!--  Current time -->
				<control type="label">
					<right>92</right>
					<bottom>44</bottom>
					<width>800</width>
					<height>30</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>fff3f3f3</textcolor>
					<label>$INFO[System.Time]</label>
				</control>
			</control>
			<control type="group">
				<visible>!Player.Paused + [Player.Seeking | Player.DisplayAfterSeek]</visible>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>
				</control>
				<!--  Cache bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.ProgressCache</info>
					<texturebg border="4">osd/progress_back.png</texturebg>
					<lefttexture/>
					<midtexture border="4">osd/progress_cache.png</midtexture>
					<righttexture/>
					<overlaytexture/>
				</control>
				<!--  Progress bar -->
				<control id="2" type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<lefttexture/>
					<midtexture border="4">osd/progress_bar.png</midtexture>
					<righttexture/>
					<overlaytexture/>
				</control>
				<!--  Chapters -->
				<control type="ranges">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<info>Player.Chapters</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<righttexture border="2">osd/chapter.png</righttexture>
				</control>
				<control type="grouplist">
					<left>92</left>
					<bottom>37</bottom>
					<width>800</width>
					<height>40</height>
					<itemgap>2</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<!--  Current position -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>fff3f3f3</textcolor>
						<label>$VAR[PlayerTime]</label>
					</control>
					<!--  Divider -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>ff696969</textcolor>
						<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
						<label>/</label>
					</control>
					<!--  Total length -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>OSD32</font>
						<textcolor>ff696969</textcolor>
						<label>$VAR[PlayerDuration]</label>
					</control>
					<!--  4K label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold36</font>
						<textcolor>ffebebeb</textcolor>
						<label>Ultra</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
					</control>
					<!--  4K label -->
					<control type="label">
						<left>6</left>
						<width>auto</width>
						<height>34</height>
						<font>Light35</font>
						<textcolor>ffebebeb</textcolor>
						<label>HD</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
					</control>
					<!--  HD label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold32</font>
						<textcolor>ffebebeb</textcolor>
						<label>[B]HD[/B]</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
					</control>
					<!--  Resolution label -->
					<control type="label">
						<left>2</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold31</font>
						<textcolor>ffebebeb</textcolor>
						<label>1080p</label>
						<visible>String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
					</control>
					<!--  HDR label -->
					<control type="label">
						<left>24</left>
						<top>-2</top>
						<width>auto</width>
						<height>34</height>
						<font>Bold36</font>
						<textcolor>ffebebeb</textcolor>
						<label>HDR</label>
						<visible>String.Contains(Player.FileName,HDR)</visible>
					</control>
				</control>
				<!--  Current time -->
				<control id="99" type="label">
					<right>92</right>
					<bottom>44</bottom>
					<width>800</width>
					<height>30</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>fff3f3f3</textcolor>
					<label>$INFO[System.Time]</label>
				</control>
			</control>
			<control type="group">
				<include>VisibleFadeAnimation</include>
				<visible>!Player.Paused + !Player.Forwarding + !Player.Rewinding + [Player.Seeking | Player.DisplayAfterSeek]</visible>
				<control type="image">
					<left>97</left>
					<bottom>123</bottom>
					<width>80</width>
					<height>80</height>
					<texture>osd/step_forward.png</texture>
					<visible>[!String.IsEmpty(Player.SeekOffset) + !String.Contains(Player.SeekOffset,-)] | [!String.IsEmpty(Player.SeekStepSize) + !String.Contains(Player.SeekStepSize,-)]</visible>
				</control>
				<control type="image">
					<left>97</left>
					<bottom>123</bottom>
					<width>80</width>
					<height>80</height>
					<texture>osd/step_back.png</texture>
					<visible>[!String.IsEmpty(Player.SeekOffset) + String.Contains(Player.SeekOffset,-)] | [!String.IsEmpty(Player.SeekStepSize) + String.Contains(Player.SeekStepSize,-)]</visible>
				</control>
				<control type="label">
					<centerleft>137</centerleft>
					<bottom>141</bottom>
					<width>50</width>
					<height>40</height>
					<align>center</align>
					<font>OSD20</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetLargeLabel]</visible>
				</control>
				<control type="label">
					<centerleft>137</centerleft>
					<bottom>140</bottom>
					<width>60</width>
					<height>40</height>
					<align>center</align>
					<font>OSD16</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetSmallLabel]</visible>
				</control>
				<control type="slider" id="401">
					<left>92</left>
					<bottom>105</bottom>
					<width>1735</width>
					<height>11</height>
					<texturesliderbar border="4" colordiffuse="00ffffff">osd/progress_back.png</texturesliderbar>
					<textureslidernib>osd/osd_seek_bar.png</textureslidernib>
					<textureslidernibfocus>osd/osd_seek_bar.png</textureslidernibfocus>
					<visible>!Player.Paused + !Player.Forwarding + !Player.Rewinding + Player.Seeking</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
