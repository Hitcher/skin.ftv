<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[Window.IsVisible(visualisation) | VideoPlayer.IsFullscreen] + [Player.Seeking | Player.HasPerformedSeek(2) | Player.Paused | Player.Forwarding | Player.Rewinding] + !Player.HasGame + !Player.FrameAdvance + !Window.IsActive(1114) + !Window.IsActive(osdsubtitlesettings) + !Window.IsActive(osdaudiosettings) + !Window.IsActive(osdvideosettings)</visible>
	<controls>
		<!-- Tempo -->
		<control type="group">
			<left>120</left>
			<top>120</top>
			<visible>VideoPlayer.IsFullscreen + Player.IsTempo + !Window.IsActive(1111)</visible>
			<animation condition="System.IdleTime(2)" reversible="true" type="Conditional">
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>
			<control type="image">
				<width>520</width>
				<height>142</height>
				<texture>osd/progress_box_tempo.png</texture>
			</control>
			<control type="image">
				<left>40</left>
				<top>36</top>
				<width>230</width>
				<height>66</height>
				<texture>$VAR[PlaySpeed]</texture>
			</control>
			<control type="label">
				<left>320</left>
				<top>24</top>
				<height>60</height>
				<aligny>top</aligny>
				<font>OSD32</font>
				<textcolor>ffffffff</textcolor>
				<label>$INFO[Player.PlaySpeed,x]</label>
			</control>
		</control>
		<control type="group">
			<visible>String.IsEmpty(Window(home).Property(ShowXRay)) + !Window.IsActive(videoosd) + !Window.IsActive(musicosd) + !Window.IsActive(subtitlesearch) + !Window.IsVisible(script-nextup-notification-NextUpInfo.xml)</visible>
			<control type="group">
				<visible>Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>
				<animation condition="System.IdleTime(4) + !Player.Caching" reversible="true" type="Conditional">
					<effect end="0" start="100" time="200" type="fade"/>
				</animation>
				<control type="image">
					<width>3960</width>
					<height>420</height>
					<texture border="1">osd/mask_top.png</texture>
				</control>
				<control type="grouplist">
					<left>40</left>
					<top>128</top>
					<width>3760</width>
					<height>100</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<!--  Video title -->
					<control type="label">
						<width min="0" max="3200">auto</width>
						<height>100</height>
						<font>OSD40</font>
						<textcolor>fffafafa</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$VAR[VideoPlayerTitle]</label>
					</control>
					<!-- Season/Episode number -->
					<control type="label">
						<width min="0" max="3200">auto</width>
						<height>100</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$VAR[PlayerEpisodeValue]</label>
					</control>
					<!--  Song title -->
					<control type="label">
						<width>auto</width>
						<height>100</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$INFO[MusicPlayer.Title]</label>
						<visible>String.IsEmpty(MusicPlayer.Title)</visible>
					</control>
				</control>
				<!--  Episode title -->
				<control type="label">
					<left>40</left>
					<top>258</top>
					<width>3760</width>
					<height>160</height>
					<aligny>top</aligny>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  Artist / Album title -->
				<control type="label">
					<left>40</left>
					<top>260</top>
					<width>3760</width>
					<height>80</height>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
				</control>
				<!-- Pause -->
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>642</width>
					<height>682</height>
					<texture>osd/Pause.png</texture>
					<visible>Player.Paused + !Player.Caching + !Window.IsVisible(subtitlesearch)</visible>
					<animation condition="System.IdleTime(2)" reversible="true" type="Conditional">
						<effect end="0" start="100" time="200" type="fade"/>
					</animation>
				</control>
				<control type="group">
					<visible>Player.Caching</visible>
					<!-- Busy -->
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>188</width>
						<height>188</height>
						<texture>common/spinner_outer.png</texture>
						<animation effect="rotate" end="-360" center="auto" time="1120" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>188</width>
						<height>188</height>
						<texture>common/spinner_inner.png</texture>
						<animation effect="rotate" end="360" center="auto" time="1680" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>3960</width>
					<height>240</height>
					<texture>osd/mask.png</texture>
				</control>
				<include>VideoPlayerDetails</include>
			</control>
			<control type="group">
				<visible>String.IsEmpty(Window(Home).Property(Skiptro.Skipping)) + !Player.Paused + [Player.Seeking | Player.HasPerformedSeek(2)]</visible>
				<control type="image">
					<bottom>0</bottom>
					<width>3960</width>
					<height>240</height>
					<texture>osd/mask.png</texture>
				</control>
				<include>VideoPlayerDetails</include>
			</control>
			<control type="group">
				<include>VisibleFadeAnimation</include>
				<visible>String.IsEmpty(Window(Home).Property(Skiptro.Skipping)) + !Player.Forwarding + !Player.Rewinding + [Player.Seeking | Player.HasPerformedSeek(2)]</visible>
				<control type="group">
					<left>194</left>
					<bottom>246</bottom>
					<width>160</width>
					<height>160</height>
					<control type="image">
						<width>160</width>
						<height>160</height>
						<texture>osd/skip.png</texture>
						<animation condition="String.Contains(Player.SeekStepSize,-) | [String.IsEmpty(Player.SeekStepSize) + String.Contains(Player.SeekOffset,-)]" effect="rotatey" end="180" center="80,0" time="0">Conditional</animation>
						<visible>!String.IsEmpty(Player.SeekOffset) | !String.IsEmpty(Player.SeekStepSize)</visible>
					</control>
				</control>
				<control type="label">
					<centerleft>274</centerleft>
					<bottom>282</bottom>
					<width>100</width>
					<height>80</height>
					<align>center</align>
					<font>OSD20</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetLargeLabel]</visible>
				</control>
				<control type="label">
					<centerleft>274</centerleft>
					<bottom>280</bottom>
					<width>120</width>
					<height>80</height>
					<align>center</align>
					<font>OSD16</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetSmallLabel]</visible>
				</control>
				<control type="slider" id="401">
					<left>184</left>
					<bottom>210</bottom>
					<width>3470</width>
					<height>24</height>
					<texturesliderbar colordiffuse="00ffffff" border="12">osd/progress_bar_back.png</texturesliderbar>
					<textureslidernib colordiffuse="fff6a42f">osd/progress_bar_pointer.png</textureslidernib>
					<textureslidernibfocus colordiffuse="fff6a42f">osd/progress_bar_pointer.png</textureslidernibfocus>
					<visible>!Player.Forwarding + !Player.Rewinding + Player.Seeking</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
