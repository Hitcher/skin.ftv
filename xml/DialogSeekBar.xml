<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[Window.IsVisible(visualisation) | VideoPlayer.IsFullscreen] + [Player.Seeking | Player.HasPerformedSeek(3) | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
	<visible>!Player.HasGame</visible>
	<visible>!Player.FrameAdvance</visible>
	<controls>
		<control type="group">
			<visible>String.IsEmpty(Window(home).Property(ShowXRay)) + !Window.IsActive(videoosd) + !Window.IsActive(musicosd) + !Window.IsActive(subtitlesearch) + !Window.IsVisible(script-nextup-notification-NextUpInfo.xml)</visible>
			<control type="group">
				<visible>Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>
				<animation condition="System.IdleTime(4) + !Player.Caching" reversible="true" type="Conditional">
					<effect end="0" start="100" time="200" type="fade"/>
				</animation>
				<control type="image">
					<width>1980</width>
					<height>210</height>
					<texture border="1">osd/mask_top.png</texture>
				</control>
				<control type="grouplist">
					<left>20</left>
					<top>64</top>
					<width>1880</width>
					<height>50</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<!--  Movie title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$INFO[VideoPlayer.Title]</label>
						<visible>String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
					</control>
					<!--  TV Show title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$INFO[VideoPlayer.TVShowTitle]</label>
						<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
					</control>
					<!-- Season/Episode number -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$VAR[PlayerEpisodeValue]</label>
					</control>
					<!--  Song title -->
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>OSD40</font>
						<textcolor>ffeaeaea</textcolor>
						<shadowcolor>ShadowColour</shadowcolor>
						<label>$INFO[MusicPlayer.Title]</label>
						<visible>String.IsEmpty(MusicPlayer.Title)</visible>
					</control>
				</control>
				<!--  Episode title -->
				<control type="label">
					<left>20</left>
					<top>129</top>
					<width>1880</width>
					<height>80</height>
					<aligny>top</aligny>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  Artist / Album title -->
				<control type="label">
					<left>20</left>
					<top>130</top>
					<width>1880</width>
					<height>40</height>
					<align>center</align>
					<font>OSD32</font>
					<textcolor>fffe8e8e8</textcolor>
					<shadowcolor>ShadowColour</shadowcolor>
					<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
				</control>
				<!-- Pause -->
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>321</width>
					<height>341</height>
					<texture>osd/Pause.png</texture>
					<visible>Player.Paused + !Player.Caching + !Window.IsVisible(subtitlesearch)</visible>
					<animation condition="System.IdleTime(2)" reversible="true" type="Conditional">
						<effect end="0" start="100" time="200" type="fade"/>
					</animation>
				</control>
				<control type="group">
					<visible>Player.Caching</visible>
					<!-- Busy -->
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_outer.png</texture>
						<animation effect="rotate" end="-360" center="auto" time="1120" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_inner.png</texture>
						<animation effect="rotate" end="360" center="auto" time="1680" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>
				</control>
				<include>VideoPlayerDetails</include>
			</control>
			<control type="group">
				<visible>!Player.Paused + [Player.Seeking | Player.HasPerformedSeek(3)]</visible>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>
				</control>
				<include>VideoPlayerDetails</include>
			</control>
			<control type="group">
				<include>VisibleFadeAnimation</include>
				<visible>!Player.Forwarding + !Player.Rewinding + [Player.Seeking | Player.HasPerformedSeek(3)]</visible>
				<control type="group">
					<left>97</left>
					<bottom>123</bottom>
					<width>80</width>
					<height>80</height>
					<control type="image">
						<width>80</width>
						<height>80</height>
						<texture>osd/step_forward.png</texture>
						<animation condition="String.Contains(Player.SeekStepSize,-) | [String.IsEmpty(Player.SeekStepSize) + String.Contains(Player.SeekOffset,-)]" effect="rotatey" end="180" center="40,0" time="0">Conditional</animation>
						<visible>!String.IsEmpty(Player.SeekOffset) | !String.IsEmpty(Player.SeekStepSize)</visible>
					</control>
				</control>
				<control type="label">
					<centerleft>137</centerleft>
					<bottom>141</bottom>
					<width>50</width>
					<height>40</height>
					<align>center</align>
					<font>OSD20</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetLargeLabel]</visible>
				</control>
				<control type="label">
					<centerleft>137</centerleft>
					<bottom>140</bottom>
					<width>60</width>
					<height>40</height>
					<align>center</align>
					<font>OSD16</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
					<visible>$EXP[SeekOffsetSmallLabel]</visible>
				</control>
				<control type="slider" id="401">
					<left>92</left>
					<bottom>105</bottom>
					<width>1735</width>
					<height>11</height>
					<texturesliderbar border="4" colordiffuse="00ffffff">osd/progress_back.png</texturesliderbar>
					<textureslidernib>osd/osd_seek_bar.png</textureslidernib>
					<textureslidernibfocus>osd/osd_seek_bar.png</textureslidernibfocus>
					<visible>!Player.Forwarding + !Player.Rewinding + Player.Seeking</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
