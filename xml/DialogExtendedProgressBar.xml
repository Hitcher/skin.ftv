<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<zorder>2</zorder>
	<controls>
		<!-- Main group -->
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
			<include>DialogAnimation</include>
			<right>156</right>
			<bottom>156</bottom>
			<width>1180</width>
			<height>354</height>
			<!-- Background image -->
			<control type="image">
				<left>-4</left>
				<top>-4</top>
				<width>1280</width>
				<height>454</height>
				<bordersize>100</bordersize>
				<bordertexture border="100" infill="false">views/shadow_fo.png</bordertexture>
				<texture border="4">dialogs/DialogMessageBackground.png</texture>
			</control>
			<!-- Icon back -->
			<control type="image">
				<left>126</left>
				<top>126</top>
				<width>194</width>
				<height>194</height>
				<aspectratio>keep</aspectratio>
				<texture>dialogs/notification_busy.png</texture>
				<animation center="auto" condition="true" effect="rotate" end="-360" loop="true" reversible="false" time="1500">Conditional</animation>
			</control>
			<!-- Icon -->
			<control type="image">
				<left>126</left>
				<top>126</top>
				<width>194</width>
				<height>194</height>
				<texture>dialogs/notification_downloading.png</texture>
			</control>
			<!-- Heading -->
			<control id="30" type="label">
				<left>364</left>
				<top>140</top>
				<width>776</width>
				<height>88</height>
				<font>Med30</font>
				<scroll>true</scroll>
				<textcolor>ffdadada</textcolor>
			</control>
			<!-- Details -->
			<control id="31" type="label">
				<left>364</left>
				<top>244</top>
				<width>776</width>
				<height>32</height>
				<font>Reg25</font>
				<scroll>true</scroll>
				<textcolor>ffdadada</textcolor>
			</control>
		</control>
	</controls>
</window>
