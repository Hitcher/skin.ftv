<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<zorder>2</zorder>
	<controls>
		<!-- Main group -->
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
			<include>DialogAnimation</include>
			<right>78</right>
			<bottom>78</bottom>
			<width>636</width>
			<height>223</height>
			<!-- Background image -->
			<control type="image">
				<width>636</width>
				<height>223</height>
				<texture border="50">views/shadow_fo.png</texture>
			</control>
			<control type="image">
				<left>48</left>
				<top>48</top>
				<width>540</width>
				<height>127</height>
				<texture border="4">dialogs/DialogMessageBackground.png</texture>
			</control>
			<!-- Icon back -->
			<control type="image">
				<left>63</left>
				<top>63</top>
				<width>97</width>
				<height>97</height>
				<aspectratio>keep</aspectratio>
				<texture>dialogs/notification_busy.png</texture>
				<animation center="auto" condition="true" effect="rotate" end="-360" loop="true" reversible="false" time="1500">Conditional</animation>
			</control>
			<!-- Icon -->
			<control type="image">
				<left>63</left>
				<top>63</top>
				<width>97</width>
				<height>97</height>
				<texture>dialogs/notification_downloading.png</texture>
			</control>
			<!-- Heading -->
			<control id="30" type="label">
				<left>182</left>
				<top>70</top>
				<width>388</width>
				<height>44</height>
				<font>Med30</font>
				<scroll>true</scroll>
				<textcolor>ffdadada</textcolor>
			</control>
			<!-- Details -->
			<control id="31" type="label">
				<left>182</left>
				<top>112</top>
				<width>388</width>
				<height>36</height>
				<font>Reg25</font>
				<scroll>true</scroll>
				<textcolor>ffdadada</textcolor>
			</control>
		</control>
	</controls>
</window>
