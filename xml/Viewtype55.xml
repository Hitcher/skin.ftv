<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype55">
		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<!-- Wide List -->
			<control id="55" type="fixedlist">
				<left>-374</left>
				<top>242</top>
				<width>2344</width>
				<height>576</height>
				<onup>Back</onup>
				<ondown>1001</ondown>
				<onleft>Back</onleft>
				<onright>noop</onright>
				<onright condition="!Window.IsVisible(1103)">SetProperty(BounceRight,1,Home)</onright>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<viewtype label="31159">list</viewtype>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">0</defaultcontrol>
				<scrolltime easing="inout" tween="sine">300</scrolltime>
				<visible>$EXP[Exp_View_55]</visible>
				<include>ListBounceAnimation</include>
				<include content="HomeToWindowSlideAnimation">
					<param name="FocusRowID1_1" value="186,10"/>
					<param name="FocusRowID1_2" value="490,-174"/>
					<param name="FocusRowID2_2" value="490,195"/>
					<param name="FocusRowID1_3" value="490,-246"/>
					<param name="FocusRowID2_3" value="490,10"/>
					<param name="FocusRowID3_3" value="490,168"/>
				</include>
				<itemlayout height="576" width="572">
					<control type="group">
						<animation center="316,288" condition="true" effect="zoom" end="85" start="85">Conditional</animation>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>736</width>
							<height>576</height>
							<texture border="50">views/shadow_nf.png</texture>
						</control>
						<control type="group">
							<include>ItemListFadeDiffuseAnimation</include>
							<control type="image">
								<top>48</top>
								<width>640</width>
								<height>480</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true" fallback="views/wide_fallback.png">$VAR[WideImage]</texture>
							</control>
							<control type="image">
								<top>48</top>
								<width>90</width>
								<height>90</height>
								<texture>$INFO[ListItem.VideoResolution,views/resolution/,.png]</texture>
							</control>
							<control type="image">
								<top>48</top>
								<width>90</width>
								<height>90</height>
								<texture>views/OverlayWatched.png</texture>
								<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png) + [!Integer.IsEqual(ListItem.Property(NumEpisodes),0) | String.IsEmpty(ListItem.Property(NumEpisodes))]</visible>
							</control>
							<control type="image">
								<bottom>48</bottom>
								<width>640</width>
								<height>125</height>
								<texture border="2">views/default_overlay.png</texture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>18</left>
								<top>448</top>
								<width>604</width>
								<height>42</height>
								<font>Bold44</font>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>ShadowColour</shadowcolor>
								<label>$VAR[EpisodeValue]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="576" width="572">
					<control type="group">
						<animation center="316,288" easing="inout" effect="zoom" end="100" start="85" time="300" tween="sine">Focus</animation>
						<animation center="316,288" condition="Container(55).OnNext | Container(55).OnPrevious" easing="inout" effect="zoom" end="85" start="100" time="300" tween="sine">UnFocus</animation>
						<animation center="316,288" condition="Control.HasFocus(4000)" easing="inout" effect="zoom" end="85" start="100" time="300" tween="sine">Conditional</animation>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>736</width>
							<height>576</height>
							<texture border="50">views/shadow_fo.png</texture>
							<include content="ContainerMoveFadeAnimation">
								<param name="ListID" value="55"/>
							</include>
						</control>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>736</width>
							<height>576</height>
							<texture border="50">views/shadow_nf.png</texture>
							<include content="FocusedListIDAnimation">
								<param name="ListID" value="55"/>
							</include>
						</control>
						<control type="group">
							<include content="FocusedListIDFadeDiffuseAnimation">
								<param name="ListID" value="55"/>
							</include>
							<control type="image">
								<top>48</top>
								<width>640</width>
								<height>480</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true" fallback="views/wide_fallback.png">$VAR[WideImage]</texture>
							</control>
							<control type="image">
								<top>48</top>
								<width>90</width>
								<height>90</height>
								<texture>$INFO[ListItem.VideoResolution,views/resolution/,.png]</texture>
							</control>
							<control type="image">
								<top>48</top>
								<width>90</width>
								<height>90</height>
								<texture>views/OverlayWatched.png</texture>
								<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png) + [!Integer.IsEqual(ListItem.Property(NumEpisodes),0) | String.IsEmpty(ListItem.Property(NumEpisodes))]</visible>
							</control>
							<control type="image">
								<bottom>48</bottom>
								<width>640</width>
								<height>125</height>
								<texture border="2">views/default_overlay.png</texture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>18</left>
								<top>448</top>
								<width>604</width>
								<height>42</height>
								<font>Bold44</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>ShadowColour</shadowcolor>
								<label>$VAR[EpisodeValue]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>
