<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- fullscreeninfo -->
	<defaultcontrol always="true">99</defaultcontrol>
	<onunload>ClearProperty(ShowXRay,home)</onunload>
	<onunload>ClearProperty(ShowIcon,home)</onunload>
	<onunload>ClearProperty(XRayRole,home)</onunload>
	<onunload>ClearProperty(XRayInfo,home)</onunload>
	<onload>Control.Move(1000,$INFO[Container(1000).CurrentItem,-])</onload>
	<onload>Control.Move(1000,1)</onload>
	<onunload condition="Player.Paused">Play</onunload>
	<controls>
		<!-- Hidden controls -->
		<control type="button" id="99">
			<include>HiddenControl</include>
			<onup condition="System.HasAddon(script.embuary.helper) + !String.IsEmpty(Container(1000).ListItem.Label) + String.IsEmpty(Window(home).Property(ShowXRay))">SetProperty(ShowXRay,true,home)</onup>
			<onup condition="System.HasAddon(script.embuary.helper) + !String.IsEmpty(Container(1000).ListItem.Label) + !Player.Paused">Pause</onup>
			<onup condition="System.HasAddon(script.embuary.helper)">1000</onup>
			<visible>System.HasAddon(plugin.video.themoviedb.helper) + Skin.HasSetting(EnableXRay)</visible>
		</control>
		<control type="group">
			<visible>!Window.IsVisible(script-embuary-person.xml) + !Window.IsVisible(script-embuary-video.xml) + System.HasAddon(plugin.video.themoviedb.helper) + Skin.HasSetting(EnableXRay)</visible>
			<animation delay="800" effect="fade" end="100" start="0" time="200">Visible</animation>
			<animation effect="slide" end="0,-1080" start="0,0" time="0" condition="String.IsEmpty(Window(home).Property(ShowXRay))">Conditional</animation>
			<control type="group">
				<include>VisibleDelayFadeAnimation</include>
				<visible>!String.IsEmpty(Window(home).Property(ShowXRay))</visible>
				<animation delay="800" effect="fade" end="100" start="0" time="200">Visible</animation>
				<!-- Heading -->
				<control type="grouplist">
					<left>196</left>
					<top>134</top>
					<height>80</height>
					<itemgap>34</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>auto</width>
						<height>60</height>
						<font>Med48</font>
						<aligny>bottom</aligny>
						<textcolor>ffdadada</textcolor>
						<label>31232</label>
					</control>
					<control type="image">
						<top>6</top>
						<width>120</width>
						<height>48</height>
						<texture>views/logos/tmdb.png</texture>
					</control>
				</control>
				<!-- Details -->
				<control type="textbox">
					<left>196</left>
					<top>810</top>
					<width>1192</width>
					<height>88</height>
					<align>left</align>
					<font>Reg30Spaced</font>
					<pagecontrol>96</pagecontrol>
					<autoscroll>false</autoscroll>
					<textcolor>ffbcbcbc</textcolor>
					<label>[B]$INFO[Container(1000).ListItem.Label][/B]  [LIGHT]$INFO[Container(1000).ListItem.Label2][/LIGHT]</label>
					<visible>Control.HasFocus(1000)</visible>
				</control>
			</control>
			<!-- Cast -->
			<control id="1000" type="fixedlist">
				<left>-102</left>
				<top>242</top>
				<width>2344</width>
				<height>576</height>
				<onup>Back</onup>
				<ondown>Back</ondown>
				<onleft>Back</onleft>
				<onright>noop</onright>
				<onright condition="!Window.IsVisible(1103)">SetProperty(BounceRight,1,Home)</onright>
				<oninfo>Close</oninfo>
				<onclick>SetProperty(XRayInfo,true,home)</onclick>
				<onclick>SetProperty(XRayIcon,$INFO[ListItem.Icon],home)</onclick>
				<onclick>SetProperty(XRayRole,$INFO[ListItem.Label2],home)</onclick>
				<onclick>RunScript(script.embuary.info,call=person,query='"$INFO[ListItem.Label]"')</onclick>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<viewtype label="">list</viewtype>
				<orientation>horizontal</orientation>
				<scrolltime easing="inout" tween="sine">300</scrolltime>
				<animation condition="Window.IsVisible(1103)" reversible="false" type="Conditional">
					<effect easing="out" end="-20,0" start="0,0" time="60" tween="sine" type="slide"/>
					<effect delay="80" easing="out" end="20,0" start="0,0" time="120" tween="sine" type="slide"/>
				</animation>
				<animation reversible="false" type="Hidden">
					<effect center="357,540" easing="out" end="98" start="100" time="180" tween="linear" type="zoom"/>
					<effect easing="out" end="0" start="100" time="180" tween="linear" type="fade"/>
				</animation>
				<animation reversible="false" type="Visible">
					<effect center="357,540" delay="280" easing="in" end="100" start="98" time="180" tween="sine" type="zoom"/>
					<effect delay="280" easing="in" end="100" start="0" time="180" tween="sine" type="fade"/>
				</animation>
				<itemlayout height="576" width="300">
					<control type="group">
						<animation center="150,288" condition="true" effect="zoom" end="85" start="85">Conditional</animation>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>416</width>
							<height>576</height>
							<texture border="50">views/shadow_nf.png</texture>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture>views/cast_fallback.png</texture>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<visible>!String.Contains(ListItem.Icon,poster.png)</visible>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture background="true">DefaultActor.png</texture>
							<visible>String.Contains(ListItem.Icon,poster.png)</visible>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<texture border="2">views/season_overlay.png</texture>
							<visible>!String.Contains(ListItem.Icon,Default)</visible>
						</control>
						<control type="label">
							<left>18</left>
							<top>412</top>
							<width>290</width>
							<height>42</height>
							<font>Bold42</font>
							<textcolor>ffffffff</textcolor>
							<shadowcolor>80000000</shadowcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>18</left>
							<top>463</top>
							<width>290</width>
							<height>28</height>
							<font>Med28</font>
							<scroll>false</scroll>
							<textcolor>ffffffff</textcolor>
							<shadowcolor>80000000</shadowcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<texture>views/OverlayNF.png</texture>
							<visible>Control.HasFocus(1000)</visible>
							<animation center="auto" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">VisibleChange</animation>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="576" width="300">
					<control type="group">
						<animation center="150,288" condition="Control.HasFocus(1000) + [Container(1000).OnNext | Container(1000).OnPrevious]" easing="inout" effect="zoom" end="100" start="85" time="300" tween="sine">Focus</animation>
						<animation center="150,288" condition="Control.HasFocus(1000) + [Container(1000).OnNext | Container(1000).OnPrevious]" easing="inout" effect="zoom" end="85" start="100" time="300" tween="sine">UnFocus</animation>
						<animation center="150,288" condition="!Control.HasFocus(1000)" easing="inout" effect="zoom" end="85" start="100" time="300" tween="sine">Conditional</animation>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>416</width>
							<height>576</height>
							<texture border="50">views/shadow_fo.png</texture>
							<animation center="auto" condition="Control.HasFocus(1000) | Container(1000).OnNext | Container(1000).OnPrevious" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Container(1000).OnNext | Container(1000).OnPrevious" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="image">
							<left>-48</left>
							<centertop>288</centertop>
							<width>416</width>
							<height>576</height>
							<texture border="50">views/shadow_nf.png</texture>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture>views/cast_fallback.png</texture>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<visible>!String.Contains(ListItem.Icon,poster.png)</visible>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<aspectratio align="center">scale</aspectratio>
							<texture background="true">DefaultActor.png</texture>
							<visible>String.Contains(ListItem.Icon,poster.png)</visible>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<texture border="2">views/season_overlay.png</texture>
							<visible>!String.Contains(ListItem.Icon,Default)</visible>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="label">
							<left>18</left>
							<top>412</top>
							<width>290</width>
							<height>42</height>
							<font>Bold42</font>
							<scroll>false</scroll>
							<textcolor>ffffffff</textcolor>
							<shadowcolor>80000000</shadowcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="label">
							<left>18</left>
							<top>463</top>
							<width>290</width>
							<height>28</height>
							<font>Med28</font>
							<scroll>false</scroll>
							<textcolor>ffffffff</textcolor>
							<shadowcolor>80000000</shadowcolor>
							<label>$INFO[ListItem.Label2]</label>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="image">
							<top>48</top>
							<width>320</width>
							<height>480</height>
							<texture>views/OverlayNF.png</texture>
							<visible>Control.HasFocus(1000)</visible>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(1000)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
					</control>
				</focusedlayout>
				<content>$VAR[XRayCast]</content>
			</control>
		</control>
		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(videoosd)</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<control type="image">
				<width>1980</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Movie title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>fffafafa</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  TV Show title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>fffafafa</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!-- Season/Episode number -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>fffafafa</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[PlayerEpisodeValue]</label>
				</control>
			</control>
			<!--  Episode title -->
			<control type="label">
				<left>20</left>
				<top>129</top>
				<width>1880</width>
				<height>80</height>
				<aligny>top</aligny>
				<align>center</align>
				<font>OSD32</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<wrapmultiline>true</wrapmultiline>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>
				<visible>Player.Paused + !Player.Caching</visible>
				<animation type="Conditional" condition="System.IdleTime(2)" reversible="true">
					<effect type="fade" start="100" end="0" time="200"/>
				</animation>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
			</control>
			<!--  Cache bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.ProgressCache</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture/>
				<midtexture border="4">osd/progress_cache.png</midtexture>
				<righttexture/>
				<overlaytexture/>
			</control>
			<!--  Progress bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<lefttexture/>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture/>
				<overlaytexture/>
			</control>
			<!--  Chapters -->
			<control type="ranges">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<info>Player.Chapters</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<righttexture border="2">osd/chapter.png</righttexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>37</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>2</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
				<!--  4K label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold36</font>
					<textcolor>ffebebeb</textcolor>
					<label>Ultra</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
				</control>
				<!--  4K label -->
				<control type="label">
					<left>6</left>
					<width>auto</width>
					<height>34</height>
					<font>Light35</font>
					<textcolor>ffebebeb</textcolor>
					<label>HD</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold32</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]HD[/B]</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
				</control>
				<!--  Resolution label -->
				<control type="label">
					<left>2</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold31</font>
					<textcolor>ffebebeb</textcolor>
					<label>1080p</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
				</control>
				<!--  HDR label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold36</font>
					<textcolor>ffebebeb</textcolor>
					<label>HDR</label>
					<visible>String.Contains(Player.FileName,HDR)</visible>
				</control>
			</control>
			<!--  X-Ray -->
			<control type="grouplist">
				<centerleft>50%</centerleft>
				<bottom>40</bottom>
				<height>40</height>
				<itemgap>10</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<visible>System.HasAddon(script.embuary.helper) + !String.IsEmpty(Container(1000).ListItem.Label)</visible>
				<control type="label">
					<top>6</top>
					<width>auto</width>
					<height>30</height>
					<font>OSD32</font>
					<textcolor>fff3f3f3</textcolor>
					<label>31233</label>
				</control>
				<control type="image">
					<width>40</width>
					<height>40</height>
					<texture>osd/x_ray.png</texture>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>44</bottom>
				<width>800</width>
				<height>30</height>
				<font>OSD32</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
	</controls>
</window>
