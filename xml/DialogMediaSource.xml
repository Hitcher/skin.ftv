<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>
		<include>DialogBackgroundImage</include>
		<!-- Main group -->
		<control type="group">
			<include>DialogZoomAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1378</width>
			<height>480</height>
			<include content="DialogBack">
			</include>
			<!-- Heading -->
			<include content="DialogHeading">
				<param name="dialog_heading_label_id" value="2"/>
			</include>
			<!-- Left group -->
			<control type="list" id="10">
				<top>60</top>
				<width>978</width>
				<height>336</height>
				<onleft>noop</onleft>
				<onright>9001</onright>
				<onup>noop</onup>
				<ondown>12</ondown>
				<scrolltime>0</scrolltime>
				<orientation>vertical</orientation>
				<itemlayout height="84" width="978">
					<control type="image">
						<width>978</width>
						<height>84</height>
						<texture border="3">settings/button_no_focus.png</texture>
					</control>
					<control type="label">
						<left>40</left>
						<width>778</width>
						<height>84</height>
						<font>Light32</font>
						<textcolor>NotFocusedColour</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="84" width="978">
					<control type="image">
						<width>978</width>
						<height>84</height>
						<texture border="3">settings/button_focus.png</texture>
					</control>
					<control type="label">
						<left>40</left>
						<width>778</width>
						<height>84</height>
						<font>Light32</font>
						<scroll>true</scroll>
						<textcolor>ffffffff</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<include content="FadeDiffuseAnimationFO">
							<param name="FadeDiffuseConditionFO" value="Control.HasFocus(10)"/>
						</include>
					</control>
				</focusedlayout>
			</control>
			<control id="11" type="image">
				<top>394</top>
				<width>978</width>
				<height>2</height>
				<texture>dialogs/default_line.png</texture>
			</control>
			<!-- Name -->
			<control type="edit" id="12">
				<top>396</top>
				<width>978</width>
				<height>84</height>
				<onup>10</onup>
				<onleft>noop</onleft>
				<onright>9001</onright>
				<ondown>noop</ondown>
				<font>Light32</font>
				<textoffsetx>40</textoffsetx>
				<textcolor>NotFocusedColour</textcolor>
				<focusedcolor>FocusedColour</focusedcolor>
				<texturefocus border="3">settings/button_focus.png</texturefocus>
				<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
				<hinttext>$LOCALIZE[1022]</hinttext>
			</control>
			<!-- Right grouplist -->
			<control type="grouplist" id="9001">
				<right>24</right>
				<bottom>33</bottom>
				<width>352</width>
				<height>420</height>
				<onleft>10</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onback>10</onback>
				<itemgap>10</itemgap>
				<align>right</align>
				<!-- Browse -->
				<include content="DialogButton">
					<param name="button_id" value="11"/>
					<param name="button_label" value="1024"/>
					<param name="button_visible" value="Control.IsEnabled(11)"/>
				</include>
				<!-- Add -->
				<include content="DialogButton">
					<param name="button_id" value="13"/>
					<param name="button_label" value="15019"/>
					<param name="button_visible" value="Control.IsEnabled(13)"/>
				</include>
				<!-- Remove -->
				<include content="DialogButton">
					<param name="button_id" value="14"/>
					<param name="button_label" value="1210"/>
					<param name="button_visible" value="Control.IsEnabled(14)"/>
				</include>
				<!-- Cancel Button -->
				<include content="DialogButton">
					<param name="button_id" value="19"/>
					<param name="button_label" value="222"/>
					<param name="button_visible" value="Control.IsEnabled(19)"/>
				</include>
				<!-- OK Button -->
				<include content="DialogButton">
					<param name="button_id" value="18"/>
					<param name="button_label" value="186"/>
					<param name="button_visible" value="Control.IsEnabled(18)"/>
				</include>
			</control>
		</control>
	</controls>
</window>
