<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype54">
		<control type="group">
			<include>VisibleDelayFadeAnimation</include>
			<visible>Control.IsVisible(54)</visible>
			<!-- Album image -->
			<control type="group">
				<left>144</left>
				<top>96</top>
				<control type="image">
					<left>-48</left>
					<centertop>288</centertop>
					<width>576</width>
					<height>576</height>
					<aspectratio align="center">scale</aspectratio>
					<bordertexture border="50">views/shadow_fo.png</bordertexture>
					<bordersize>50</bordersize>
					<texture background="true" fallback="DefaultAlbumCover.png">$INFO[ListItem.Icon]</texture>
				</control>
			</control>
			<!-- Artist / Album -->
			<control type="group">
				<left>691</left>
				<top>138</top>
				<control type="label">
					<width>840</width>
					<height>48</height>
					<font>Med48</font>
					<textcolor>ffbebebe</textcolor>
					<label>$INFO[Container.FolderName]</label>
				</control>
				<control type="label">
					<top>57</top>
					<width>840</width>
					<height>32</height>
					<font>Med32</font>
					<textcolor>ffbebebe</textcolor>
					<label>$VAR[AlbumArtistName]</label>
				</control>
			</control>
			<!-- List -->
			<control id="54" type="fixedlist">
				<left>668</left>
				<top>292</top>
				<width>1132</width>
				<height>900</height>
				<onup>back</onup>
				<ondown>noop</ondown>
				<onleft>2001</onleft>
				<onright>noop</onright>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime>0</scrolltime>
				<visible>Container.Content(songs)</visible>
				<animation condition="[!Container.HasParent + String.IsEqual(Container(54).CurrentItem,1)] | [Container.HasParent + String.IsEqual(Container(54).CurrentItem,0)]" effect="slide" end="0,-101" start="0,0">Conditional</animation>
				<itemlayout height="101" width="1132">
					<control type="label">
						<width>68</width>
						<height>31</height>
						<font>Light32</font>
						<align>center</align>
						<textcolor>ff646668</textcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!ListItem.IsParentFolder + !String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsParentFolder | String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>89</left>
						<top>35</top>
						<width>1044</width>
						<height>28</height>
						<font>Light28</font>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!String.IsEqual(ListItem.AlbumArtist,ListItem.Artist) | String.Contains(Container.FolderPath,singles) | String.Contains(Container.FolderPath,songs)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="101" width="1132">
					<control type="label">
						<width>68</width>
						<height>31</height>
						<font>Light32</font>
						<align>center</align>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!ListItem.IsParentFolder + !String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsParentFolder | String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>1044</width>
						<height>31</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>89</left>
						<top>35</top>
						<width>1044</width>
						<height>28</height>
						<font>Light28</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!String.IsEqual(ListItem.AlbumArtist,ListItem.Artist) | String.Contains(Container.FolderPath,singles) | String.Contains(Container.FolderPath,songs)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Lower group -->
			<control type="group">
				<left>132</left>
				<top>648</top>
				<include>VisibleDelayFadeAnimation</include>
				<!-- Controls -->
				<control type="group">
					<!-- Dummy to always set focus to first visible button -->
					<control id="2001" type="button">
						<width>-8</width>
						<height>0</height>
						<onfocus>SetFocus(2002)</onfocus>
						<include>NoTextures</include>
						<visible>!Control.HasFocus(2002) + !Control.HasFocus(2003) + !Control.HasFocus(2004) + !Control.HasFocus(2005) + !Control.HasFocus(20)</visible>
					</control>
					<control id="2002" type="button">
						<width>249</width>
						<height>100</height>
						<onleft>Back</onleft>
						<onright>20</onright>
						<onup>50</onup>
						<ondown>2004</ondown>
						<onclick>SetFocus(50)</onclick>
						<onclick>Info</onclick>
						<font>Med24</font>
						<label>$VAR[MediaType][CR]Information</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<enabled>!ListItem.IsParentFolder</enabled>
					</control>
					<control id="2004" type="button">
						<top>110</top>
						<width>249</width>
						<height>100</height>
						<onleft>2003</onleft>
						<onright>2005</onright>
						<onup>2002</onup>
						<ondown>3000</ondown>
						<onclick>SetFocus(5001)</onclick>
						<font>Med24</font>
						<wrapmultiline>true</wrapmultiline>
						<label>$LOCALIZE[31089]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
					</control>
					<control id="20" type="togglebutton">
						<left>247</left>
						<width>249</width>
						<height>100</height>
						<onleft>2002</onleft>
						<onright>50</onright>
						<onup>50</onup>
						<ondown>2005</ondown>
						<onclick>SetFocus(50)</onclick>
						<font>Med24</font>
						<label>$LOCALIZE[31090]</label>
						<wrapmultiline>true</wrapmultiline>
						<altlabel>$LOCALIZE[31091]</altlabel>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<visible>Control.IsEnabled(20)</visible>
						<usealttexture>Library.IsScanningMusic</usealttexture>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<alttexturefocus border="13,5,6,8">views/button_fo.png</alttexturefocus>
						<alttexturenofocus border="13,3,6,6">views/button_nf.png</alttexturenofocus>
					</control>
					<control id="2005" type="button">
						<left>247</left>
						<top>110</top>
						<width>249</width>
						<height>100</height>
						<onleft>2004</onleft>
						<onright>50</onright>
						<onup>20</onup>
						<ondown>noop</ondown>
						<onclick condition="!String.IsEqual(Playlist.Length(music),0)">ActivateWindow(musicplaylist)</onclick>
						<font>Med24</font>
						<wrapmultiline>true</wrapmultiline>
						<label>$LOCALIZE[31088]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<visible>!String.IsEqual(Playlist.Length(music),0)</visible>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
					</control>
				</control>
			</control>
		</control>
	</include>
</includes>
