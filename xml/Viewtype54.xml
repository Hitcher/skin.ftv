<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype54">
		<control type="group">
			<include>VisibleDelayFadeAnimation</include>
			<visible>Control.IsVisible(54)</visible>
			<!-- Album image -->
			<control type="group">
				<left>288</left>
				<top>192</top>
				<control type="image">
					<left>-96</left>
					<centertop>576</centertop>
					<width>1152</width>
					<height>1152</height>
					<aspectratio align="center">scale</aspectratio>
					<bordertexture infill="false" border="100">views/shadow_fo.png</bordertexture>
					<bordersize>100</bordersize>
					<texture background="true" fallback="DefaultAlbumCover.png">$INFO[ListItem.Icon]</texture>
				</control>
			</control>
			<!-- Artist / Album -->
			<control type="group">
				<left>1372</left>
				<top>276</top>
				<control type="label">
					<width>1680</width>
					<height>96</height>
					<font>Med48</font>
					<textcolor>ffbebebe</textcolor>
					<label>$INFO[Container.FolderName]</label>
				</control>
				<control type="label">
					<top>114</top>
					<width>1680</width>
					<height>64</height>
					<font>Med32</font>
					<textcolor>ffbebebe</textcolor>
					<label>$VAR[AlbumArtistName]</label>
				</control>
				<control type="label">
					<top>196</top>
					<left>-2</left>
					<width>136</width>
					<height>56</height>
					<font>CD</font>
					<textcolor>ffbebebe</textcolor>
					<label>&#8858;</label>
					<visible>Integer.IsGreater(ListItem.TotalDiscs,1) + !String.IsEmpty(ListItem.DiscNumber)</visible>
				</control>
				<control type="label">
					<top>198</top>
					<left>68</left>
					<width>500</width>
					<height>56</height>
					<font>Light28</font>
					<textcolor>ffbebebe</textcolor>
					<label>$INFO[ListItem.DiscNumber] $LOCALIZE[20163] $INFO[ListItem.TotalDiscs]</label>
					<visible>Integer.IsGreater(ListItem.TotalDiscs,1) + !String.IsEmpty(ListItem.DiscNumber)</visible>
				</control>
			</control>
			<!-- List -->
			<control id="54" type="fixedlist">
				<left>1372</left>
				<top>584</top>
				<width>2264</width>
				<height>1800</height>
				<onup>back</onup>
				<ondown>noop</ondown>
				<onleft>2001</onleft>
				<onright>noop</onright>
				<movement>1</movement>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="31112">list</viewtype>
				<scrolltime>0</scrolltime>
				<visible>$EXP[Exp_View_54]</visible>
				<animation condition="[!Container.HasParent + Integer.IsLessOrEqual(Container(54).NumItems,2)] | [Container.HasParent + Integer.IsLessOrEqual(Container(54).NumItems,1)]" effect="slide" end="0,-202" start="0,0">Conditional</animation>
				<itemlayout height="202" width="2264">
					<control type="label">
						<width>136</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ff646668</textcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!ListItem.IsParentFolder + !String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsParentFolder | String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>142</left>
						<top>70</top>
						<width>2088</width>
						<height>56</height>
						<font>Light28</font>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!String.IsEqual(ListItem.AlbumArtist,ListItem.Artist) | String.Contains(Container.FolderPath,singles) | String.Contains(Container.FolderPath,songs)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="202" width="2264">
					<control type="label">
						<width>136</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!ListItem.IsParentFolder + !String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsParentFolder | String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>142</left>
						<width>2088</width>
						<height>62</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>142</left>
						<top>70</top>
						<width>2088</width>
						<height>56</height>
						<font>Light28</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!String.IsEqual(ListItem.AlbumArtist,ListItem.Artist) | String.Contains(Container.FolderPath,singles) | String.Contains(Container.FolderPath,songs)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Lower group -->
			<control type="group">
				<left>264</left>
				<top>1296</top>
				<include>VisibleDelayFadeAnimation</include>
				<!-- Controls -->
				<control type="group">
					<!-- Dummy to always set focus to first visible button -->
					<control id="2001" type="button">
						<width>-16</width>
						<height>0</height>
						<onfocus>SetFocus(2002)</onfocus>
						<include>NoTextures</include>
						<visible>!Control.HasFocus(2002) + !Control.HasFocus(2003) + !Control.HasFocus(2004) + !Control.HasFocus(2005) + !Control.HasFocus(20)</visible>
					</control>
					<control id="2002" type="button">
						<width>498</width>
						<height>200</height>
						<onleft>Back</onleft>
						<onright>20</onright>
						<onup>50</onup>
						<ondown>2004</ondown>
						<onclick>SetFocus(50)</onclick>
						<onclick>Info</onclick>
						<font>Med24</font>
						<label>$VAR[MediaType][CR]Information</label>
						<textoffsetx>56</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="28,12,10,14">views/button_fo.png</texturefocus>
						<texturenofocus border="32,12,12,12">views/button_nf.png</texturenofocus>
						<enable>!ListItem.IsParentFolder</enable>
					</control>
					<control id="2004" type="button">
						<top>220</top>
						<width>498</width>
						<height>200</height>
						<onleft>2003</onleft>
						<onright>2005</onright>
						<onup>2002</onup>
						<ondown>3000</ondown>
						<onclick>SetFocus(5001)</onclick>
						<font>Med24</font>
						<wrapmultiline>true</wrapmultiline>
						<label>$LOCALIZE[31089]</label>
						<textoffsetx>56</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="28,12,10,14">views/button_fo.png</texturefocus>
						<texturenofocus border="32,12,12,12">views/button_nf.png</texturenofocus>
					</control>
					<control id="20" type="togglebutton">
						<left>494</left>
						<width>498</width>
						<height>200</height>
						<onleft>2002</onleft>
						<onright>50</onright>
						<onup>50</onup>
						<ondown>2005</ondown>
						<onclick>SetFocus(50)</onclick>
						<font>Med24</font>
						<label>$LOCALIZE[31090]</label>
						<wrapmultiline>true</wrapmultiline>
						<altlabel>$LOCALIZE[31091]</altlabel>
						<textoffsetx>56</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<visible>Control.IsEnabled(20)</visible>
						<usealttexture>Library.IsScanningMusic</usealttexture>
						<texturefocus border="28,12,10,14">views/button_fo.png</texturefocus>
						<texturenofocus border="32,12,12,12">views/button_nf.png</texturenofocus>
						<alttexturefocus border="28,12,10,14">views/button_fo.png</alttexturefocus>
						<alttexturenofocus border="32,12,12,12">views/button_nf.png</alttexturenofocus>
					</control>
					<control id="2005" type="button">
						<left>494</left>
						<top>220</top>
						<width>498</width>
						<height>200</height>
						<onleft>2004</onleft>
						<onright>50</onright>
						<onup>20</onup>
						<ondown>noop</ondown>
						<onclick condition="!String.IsEqual(Playlist.Length(music),0)">ActivateWindow(musicplaylist)</onclick>
						<font>Med24</font>
						<wrapmultiline>true</wrapmultiline>
						<label>$LOCALIZE[31088]</label>
						<textoffsetx>56</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<visible>!String.IsEqual(Playlist.Length(music),0)</visible>
						<texturefocus border="28,12,10,14">views/button_fo.png</texturefocus>
						<texturenofocus border="32,12,12,12">views/button_nf.png</texturenofocus>
					</control>
				</control>
			</control>
		</control>
	</include>
</includes>
