<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- dialogcolorpicker -->
	<defaultcontrol always="true">6</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Dialog group -->
		<control type="group">
			<include>DialogAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>2020</width>
			<height>1758</height>
			<!-- Background -->
			<include content="DialogBack">
				<param name="dialog_back_width" value="100%"/>
				<param name="dialog_back_height" value="100%"/>
				<param name="dialog_heading_width" value="100%"/>
				<param name="dialog_shadow_1_visible" value="false"/>
			</include>
			<!-- Heading -->
			<control type="label" id="1">
				<left>80</left>
				<top>28</top>
				<height>60</height>
				<width>1876</width>
				<aligny>center</aligny>
				<font>Bold30</font>
				<label>1021</label>
				<textcolor>ffdadada</textcolor>
			</control>
			<!-- Color picker label -->
			<control type="label">
				<right>80</right>
				<top>28</top>
				<height>60</height>
				<width>1876</width>
				<align>right</align>
				<aligny>center</aligny>
				<font>Light30</font>
				<label>$INFO[Container(6).ListItem.Label,, - ]$INFO[Container(6).ListItem.Label2,#,]</label>
				<textcolor>ffa4a4a4</textcolor>
			</control>
			<!-- Color picker panel -->
			<control type="panel" id="6">
				<left>122</left>
				<top>236</top>
				<width>1800</width>
				<height>1440</height>
				<onup>6</onup>
				<ondown>6</ondown>
				<onleft>9001</onleft>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<pagecontrol>61</pagecontrol>
				<viewtype label="100">icon</viewtype>
				<itemlayout height="180" width="180">
					<control type="group">
						<control type="image">
							<width>156</width>
							<height>156</height>
							<texture border="4">dialogs/KeyboardButtonNF.png</texture>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>148</width>
							<height>148</height>
							<texture border="4">dialogs/white.png</texture>
							<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="180" width="180">
					<control type="image">
						<width>156</width>
						<height>156</height>
						<texture border="4">dialogs/KeyboardButtonFO.png</texture>
					</control>
					<control type="image">
						<top>4</top>
						<left>4</left>
						<width>148</width>
						<height>148</height>
						<texture border="4">dialogs/white.png</texture>
						<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
