<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include file="Defaults.xml"/>
	<include file="Includes_Animations.xml"/>
	<include file="Includes_Expressions.xml"/>
	<include file="Includes_Parameters.xml"/>
	<include file="Includes_Variables.xml"/>
	<include file="Includes_AddonBrowser.xml"/>
	<include file="Includes_Dialog_Video_Information.xml"/>
	<include file="Includes_Dialog_Person_Information.xml"/>
	<include file="Includes_Dialog_Set_Information.xml"/>
	<include file="Includes_Dialog_Movie_TV_Information.xml"/>
	<include file="Includes_Dialog_Default_Video_Information.xml"/>
	<include file="Includes_DialogSelect.xml"/>
	<include file="Includes_DialogSettings.xml"/>
	<include file="Includes_DialogGameControllers.xml"/>
	<include file="Includes_Home_Widgets_Setup.xml"/>
	<include file="Includes_VideoInfoCast.xml"/>
	<include file="Viewtype50.xml"/>
	<include file="Viewtype51.xml"/>
	<include file="Viewtype52.xml"/>
	<include file="Viewtype53.xml"/>
	<include file="Viewtype54.xml"/>
	<include file="Viewtype55.xml"/>
	<include file="Viewtype56.xml"/>
	<include file="ForcedViewtype60.xml"/>
	<include file="ForcedViewtype61.xml"/>
	<include file="script-skinviewtypes-includes.xml"/>
	<include file="script-skinshortcuts-includes.xml"/>
	<include file="script-skinshortcuts-includes-default.xml"/>
	<!-- Fullscreen dimensions -->
	<include name="FullscreenDimensions">
		<left>0</left>
		<top>0</top>
		<width>1920</width>
		<height>1080</height>
	</include>
	<!-- Background image -->
	<include name="BackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="BackgroundColour">common/white_square.png</texture>
		</control>
	</include>
	<!-- Debug window label -->
	<include name="DebugWindowLabel">
		<width>1920</width>
		<height>21</height>
		<textcolor>FF0000FF</textcolor>
		<shadowcolor>ShadowColour</shadowcolor>
		<font>font13</font>
		<align>left</align>
	</include>
	<!-- Debug dialog label -->
	<include name="DebugDialogLabel">
		<width>1920</width>
		<height>21</height>
		<textcolor>FFFF0000</textcolor>
		<shadowcolor>ShadowColour</shadowcolor>
		<font>font13</font>
		<align>left</align>
	</include>
	<!-- Debug control label -->
	<include name="DebugControlLabel">
		<width>1400</width>
		<height>21</height>
		<textcolor>FFFF0000</textcolor>
		<shadowcolor>ShadowColour</shadowcolor>
		<font>font13</font>
		<align>right</align>
	</include>
	<!-- Dialog background image -->
	<include name="DialogBackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>dialogs/DialogBackground.png</texture>
			<animation effect="fade" end="100" start="0" time="200">WindowOpen</animation>
			<animation delay="100" effect="fade" end="0" start="100" time="200">WindowClose</animation>
		</control>
	</include>
	<!-- Dialog text background image -->
	<include name="DialogTextBackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>dialogs/DialogBackground.png</texture>
			<animation effect="fade" end="100" start="0" time="200">WindowOpen</animation>
			<animation delay="100" effect="fade" end="0" start="100" time="200">WindowClose</animation>
		</control>
	</include>
	<!-- Message Background image -->
	<include name="MessageBackground">
		<texture border="2">dialogs/DialogMessageBackground.png</texture>
		<bordersize>-52</bordersize>
	</include>
	<!-- Widths -->
	<include name="Width195">
		<width>195</width>
	</include>
	<include name="Width292">
		<width>292</width>
	</include>
	<include name="Width673">
		<width>673</width>
	</include>
	<include name="Width770">
		<width>770</width>
	</include>
	<include name="Width715">
		<width>715</width>
	</include>
	<include name="Width812">
		<width>812</width>
	</include>
	<!-- OSD Padding -->
	<include name="osd_padding">
		<height>82</height>
		<width>17.36</width>
		<texture/>
	</include>
	<!-- Hidden List -->
	<include name="HiddenList">
		<top>-10</top>
		<width>10</width>
		<height>1</height>
		<viewtype label="">list</viewtype>
		<orientation>horizontal</orientation>
		<itemlayout height="1" width="1"/>
		<focusedlayout height="1" width="1"/>
	</include>
	<!-- Cast list -->
	<include name="CastList">
		<control type="list" id="50">
			<include>HiddenList</include>
		</control>
	</include>
	<!-- Fanart -->
	<include name="Fanart">
		<control type="group">
			<animation condition="!Window.Previous(visualisation)" delay="800" effect="fade" end="100" start="0" time="200">WindowOpen</animation>
			<control type="image">
				<include>FullscreenDimensions</include>
				<fadetime>400</fadetime>
				<colordiffuse>26ffffff</colordiffuse>
				<texture background="true">$VAR[Fanart]</texture>
			</control>
		</control>
	</include>
	<!-- No textures -->
	<include name="NoTextures">
		<texturefocus/>
		<texturenofocus/>
		<alttexturenofocus/>
		<alttexturefocus/>
		<textureradioonfocus/>
		<textureradioonnofocus/>
		<textureradioofffocus/>
		<textureradiooffnofocus/>
		<textureup/>
		<texturedown/>
		<textureupfocus/>
		<texturedownfocus/>
	</include>
	<!-- Hidden control -->
	<include name="HiddenControl">
		<left>-10</left>
		<top>-10</top>
		<width>1</width>
		<height>1</height>
		<font/>
		<texture/>
		<texturefocus/>
		<texturenofocus/>
		<alttexturenofocus/>
		<alttexturefocus/>
		<textureradiofocus/>
		<textureradionofocus/>
	</include>
	<!-- Keyboard buttons -->
	<include name="KeyboardButtons">
		<width>78</width>
		<height>78</height>
		<font>Med40</font>
		<align>center</align>
		<aligny>center</aligny>
		<textcolor>ffdadada</textcolor>
		<focusedcolor>ff0c0c0c</focusedcolor>
		<texturefocus border="2">dialogs/KeyboardButtonFO.png</texturefocus>
		<texturenofocus border="2">dialogs/KeyboardButtonNF.png</texturenofocus>
	</include>
	<!-- Numeric buttons -->
	<include name="NumericButtons">
		<width>168</width>
		<height>168</height>
		<font>Med40</font>
		<align>center</align>
		<aligny>center</aligny>
		<textcolor>ffdadada</textcolor>
		<focusedcolor>ff0c0c0c</focusedcolor>
		<texturefocus border="2">dialogs/KeyboardButtonFO.png</texturefocus>
		<texturenofocus border="2">dialogs/KeyboardButtonNF.png</texturenofocus>
	</include>
	<!-- Video player details -->
	<include name="VideoPlayerDetails">
		<!--  Cache bar -->
		<control type="progress">
			<left>92</left>
			<bottom>93</bottom>
			<width>1735</width>
			<height>11</height>
			<reveal>true</reveal>
			<info>Player.ProgressCache</info>
			<texturebg border="4">osd/progress_back.png</texturebg>
			<lefttexture/>
			<midtexture border="4">osd/progress_cache.png</midtexture>
			<righttexture/>
			<overlaytexture/>
		</control>
		<!--  Progress bar -->
		<control type="progress">
			<left>92</left>
			<bottom>93</bottom>
			<width>1735</width>
			<height>11</height>
			<reveal>true</reveal>
			<info>Player.Progress</info>
			<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
			<lefttexture/>
			<midtexture border="4">osd/progress_bar.png</midtexture>
			<righttexture/>
			<overlaytexture/>
		</control>
		<!--  Edits -->
		<control type="ranges">
			<left>92</left>
			<bottom>105</bottom>
			<width>1735</width>
			<height>11</height>
			<info>Player.Editlist</info>
			<lefttexture border="1">osd/chapter.png</lefttexture>
			<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
			<midtexture border="4">osd/osd_scene.png</midtexture>
			<righttexture border="1">osd/chapter.png</righttexture>
		</control>
		<!--  Cuts -->
		<control type="ranges">
			<left>92</left>
			<bottom>105</bottom>
			<width>1735</width>
			<height>11</height>
			<info>Player.Cuts</info>
			<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
			<righttexture border="2">osd/osd_cut.png</righttexture>
		</control>
		<!--  Scenes -->
		<control type="ranges">
			<left>92</left>
			<bottom>93</bottom>
			<width>1735</width>
			<height>11</height>
			<info>Player.SceneMarkers</info>
			<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
			<righttexture border="1">osd/chapter.png</righttexture>
		</control>
		<!--  Chapters -->
		<control type="ranges">
			<left>92</left>
			<bottom>93</bottom>
			<width>1735</width>
			<height>11</height>
			<info>Player.Chapters</info>
			<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
			<righttexture border="1">osd/chapter.png</righttexture>
		</control>
		<control type="grouplist">
			<left>92</left>
			<bottom>40</bottom>
			<width>800</width>
			<height>38</height>
			<itemgap>2</itemgap>
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<!--  Current position -->
			<control type="label">
				<width>auto</width>
				<height>38</height>
				<font>OSD32</font>
				<textcolor>fff3f3f3</textcolor>
				<label>$VAR[PlayerTime]</label>
			</control>
			<!--  Divider -->
			<control type="label">
				<width>auto</width>
				<height>38</height>
				<font>OSD32</font>
				<textcolor>ff696969</textcolor>
				<label>/</label>
				<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
			</control>
			<!--  Total length -->
			<control type="label">
				<width>auto</width>
				<height>38</height>
				<font>OSD32</font>
				<textcolor>ff696969</textcolor>
				<label>$VAR[PlayerDuration]</label>
			</control>
			<!--  4K label -->
			<control type="label">
				<left>24</left>
				<top>-2</top>
				<width>auto</width>
				<height>38</height>
				<font>Bold36</font>
				<textcolor>ffebebeb</textcolor>
				<label>Ultra</label>
				<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
			</control>
			<!--  4K label -->
			<control type="label">
				<left>6</left>
				<width>auto</width>
				<height>38</height>
				<font>Light35</font>
				<textcolor>ffebebeb</textcolor>
				<label>HD</label>
				<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
			</control>
			<!--  HD label -->
			<control type="label">
				<left>24</left>
				<width>auto</width>
				<height>38</height>
				<font>Bold32</font>
				<textcolor>ffebebeb</textcolor>
				<label>[B]HD[/B]</label>
				<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
			</control>
			<!--  Resolution label -->
			<control type="label">
				<left>2</left>
				<width>auto</width>
				<height>38</height>
				<font>Bold31</font>
				<textcolor>ffebebeb</textcolor>
				<label>1080p</label>
				<visible>String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
			</control>
			<!--  HDR label -->
			<control type="label">
				<left>24</left>
				<top>-2</top>
				<width>auto</width>
				<height>38</height>
				<font>Bold36</font>
				<textcolor>ffebebeb</textcolor>
				<label>$VAR[PlayerHDRType]</label>
				<visible>!String.IsEmpty(VideoPlayer.HdrType)</visible>
			</control>
			<!--  HDR label -->
			<control type="label">
				<left>6</left>
				<width>auto</width>
				<height>38</height>
				<font>Light35</font>
				<textcolor>ffebebeb</textcolor>
				<label>Vision</label>
				<visible>String.IsEqual(VideoPlayer.HdrType,dolbyvision)</visible>
			</control>
		</control>
		<!--  X-Ray -->
		<control type="grouplist">
			<centerleft>50%</centerleft>
			<bottom>38</bottom>
			<height>42</height>
			<itemgap>10</itemgap>
			<align>center</align>
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<visible>!String.IsEmpty(Container(1000).ListItem.Label)</visible>
			<control type="label">
				<width>auto</width>
				<height>42</height>
				<font>OSD32</font>
				<textcolor>fff3f3f3</textcolor>
				<label>31233</label>
			</control>
			<control type="image">
				<top>4</top>
				<width>40</width>
				<height>38</height>
				<texture>osd/x_ray.png</texture>
			</control>
		</control>
		<!--  Current time -->
		<control type="label">
			<right>92</right>
			<bottom>40</bottom>
			<width>800</width>
			<height>38</height>
			<font>OSD32</font>
			<align>right</align>
			<textcolor>fff3f3f3</textcolor>
			<label>$INFO[System.Time][COLOR ff696969] / $INFO[Player.FinishTime][/COLOR]</label>
		</control>
	</include>
</includes>
