<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="true">50</defaultcontrol>
	<controls>
		<include>DialogBackgroundImage</include>
		<control type="group">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1378</width>
			<height>680</height>
			<include>DialogSlideAnimation</include>
			<include content="DialogZoomAnimation">
				<param name="OpenCondition" value="true"/>
				<param name="CloseCondition" value="true"/>
			</include>
			<include content="DialogBack">
				<param name="dialog_back_height" value="680"/>
				<param name="dialog_shadow_1_height" value="620"/>
				<param name="dialog_shadow_2_left" value="558"/>
				<param name="dialog_shadow_2_height" value="560"/>
				<param name="dialog_shadow_2_visible" value="true"/>
			</include>
			<include content="DialogHeading">
				<param name="dialog_heading_label_id" value="2"/>
			</include>
			<include content="DialogHeadingCount">
				<param name="dialog_heading_count_container_id" value="50"/>
			</include>
			<control type="image">
				<top>620</top>
				<height>2</height>
				<texture>dialogs/default_line.png</texture>
			</control>
			<control id="50" type="list">
				<top>60</top>
				<width>558</width>
				<height>560</height>
				<onleft>Back</onleft>
				<onleft>noop</onleft>
				<onright>9000</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<scrolltime>0</scrolltime>
				<orientation>vertical</orientation>
				<itemlayout height="140" width="558">
					<control type="image">
						<width>558</width>
						<height>140</height>
						<texture border="3">settings/button_no_focus.png</texture>
					</control>
					<control type="image">
						<left>40</left>
						<top>20</top>
						<width>100</width>
						<height>100</height>
						<texture fallback="views/square_fallback.png">$VAR[DialogSelectImage]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<top>30</top>
						<left>160</left>
						<width>358</width>
						<height>42</height>
						<font>Light32</font>
						<textcolor>NotFocusedColour</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation condition="String.IsEmpty(ListItem.Label2)" effect="slide" end="0,19">Conditional</animation>
					</control>
					<control type="label">
						<top>74</top>
						<left>160</left>
						<width>358</width>
						<height>34</height>
						<font>Light24</font>
						<textcolor>NotFocusedColour</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="140" width="558">
					<control type="image">
						<width>558</width>
						<height>140</height>
						<texture border="3">settings/button_focus.png</texture>
					</control>
					<control type="image">
						<left>40</left>
						<top>20</top>
						<width>100</width>
						<height>100</height>
						<texture fallback="views/square_fallback.png">$VAR[DialogSelectImage]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<top>30</top>
						<left>160</left>
						<width>358</width>
						<height>42</height>
						<font>Light32</font>
						<textcolor>FocusedColour</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation condition="String.IsEmpty(ListItem.Label2)" effect="slide" end="0,19">Conditional</animation>
						<visible>Control.HasFocus(50)</visible>
					</control>
					<control type="label">
						<top>74</top>
						<left>160</left>
						<width>358</width>
						<height>34</height>
						<font>Light24</font>
						<textcolor>FocusedColour</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<visible>Control.HasFocus(50)</visible>
					</control>
					<control type="label">
						<top>30</top>
						<left>160</left>
						<width>358</width>
						<height>42</height>
						<font>Light32</font>
						<textcolor>NotFocusedColour</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation condition="String.IsEmpty(ListItem.Label2)" effect="slide" end="0,19">Conditional</animation>
						<visible>!Control.HasFocus(50)</visible>
					</control>
					<control type="label">
						<top>74</top>
						<left>160</left>
						<width>358</width>
						<height>34</height>
						<font>Light24</font>
						<textcolor>NotFocusedColour</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<visible>!Control.HasFocus(50)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<left>598</left>
				<top>100</top>
				<width>353</width>
				<height>497</height>
				<aspectratio>keep</aspectratio>
				<bordersize>0,0,13,17</bordersize>
				<texture fallback="views/square_fallback.png">$VAR[VersionPoster]</texture>
				<bordertexture infill="false" border="14,18,14,18">dialogs/shadow.png</bordertexture>
			</control>
			<!-- Button grouplist -->
			<control id="9000" type="grouplist">
				<right>24</right>
				<bottom>93</bottom>
				<width>352</width>
				<height>506</height>
				<onleft>50</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onback>3</onback>
				<itemgap>10</itemgap>
				<align>right</align>
				<!-- Play Button -->
				<include content="DialogButton">
					<param name="button_id" value="21"/>
					<param name="button_label" value="208"/>
					<param name="button_visible" value="Control.IsEnabled(21)"/>
				</include>
				<!-- Add version Button -->
				<include content="DialogButton">
					<param name="button_id" value="22"/>
					<param name="button_label" value="40014"/>
					<param name="button_visible" value="Window.IsVisible(managevideoversions)"/>
				</include>
				<!-- Add extras Button -->
				<include content="DialogButton">
					<param name="button_id" value="23"/>
					<param name="button_label" value="40015"/>
					<param name="button_visible" value="Window.IsVisible(managevideoextras)"/>
				</include>
				<!-- Choose art Button -->
				<include content="DialogButton">
					<param name="button_id" value="27"/>
					<param name="button_label" value="13511"/>
					<param name="button_visible" value="Control.IsEnabled(27)"/>
				</include>
				<!-- Rename Button -->
				<include content="DialogButton">
					<param name="button_id" value="24"/>
					<param name="button_label" value="118"/>
					<param name="button_visible" value="Control.IsEnabled(24)"/>
				</include>
				<!-- Remove Button -->
				<include content="DialogButton">
					<param name="button_id" value="26"/>
					<param name="button_label" value="15015"/>
					<param name="button_visible" value="Control.IsEnabled(26)"/>
				</include>
				<!-- Set default Button -->
				<include content="DialogButton">
					<param name="button_id" value="25"/>
					<param name="button_label" value="40023"/>
					<param name="button_visible" value="Window.IsVisible(managevideoversions)"/>
				</include>
			</control>
			<control type="label">
				<bottom>14</bottom>
				<left>40</left>
				<width>1298</width>
				<height>30</height>
				<font>Reg30</font>
				<scroll>true</scroll>
				<textcolor>NotFocusedColour</textcolor>
				<label>$INFO[Container(50).ListItem.FileNameAndPath]</label>
			</control>
		</control>
	</controls>
</window>