<includes>
	<include name="XRayCastListItems">
		<item id="$PARAM[item_index]">
			<label>$INFO[Container(999).ListItemAbsolute($PARAM[item_index]).Label]</label>
			<label2>$INFO[Container(999).ListItemAbsolute($PARAM[item_index]).Label2]</label2>
			<icon>$INFO[Container(999).ListItemAbsolute($PARAM[item_index]).Icon]</icon>
			<visible>!String.IsEmpty(Container(999).ListItemAbsolute($PARAM[item_index]).Label)</visible>
		</item>
	</include>
	<include name="WeatherHourlyItem">
		<item>
			<label>$INFO[Window(weather).Property(Hourly.$PARAM[item_index].Time)]</label>
			<label2>$INFO[Window(weather).Property(Hourly.$PARAM[item_index].Temperature)] ∙ $INFO[Window(weather).Property(Hourly.$PARAM[item_index].Precipitation)]</label2>
			<icon>resource://resource.images.weathericons.default/$INFO[Window(weather).Property(Hourly.$PARAM[item_index].OutlookIcon)]</icon>
			<onclick>noop</onclick>
			<visible>!String.IsEmpty(Window(weather).Property(Hourly.IsFetched)) + !String.IsEmpty(Window(weather).Property(Hourly.$PARAM[item_index].Outlook)) + String.IsEqual(Window(home).Property(Hourly),true)</visible>
		</item>
	</include>
	<include name="WeatherDailyItem">
		<item>
			<label>$INFO[Window(weather).Property(Daily.$PARAM[item_index].ShortDay)]</label>
			<label2>$INFO[Window(weather).Property(Daily.$PARAM[item_index].LowTemperature)] ∙ $INFO[Window(weather).Property(Daily.$PARAM[item_index].HighTemperature)]</label2>
			<icon>$INFO[Window(weather).Property(Daily.$PARAM[item_index].FanartCode),weather/icons/,.png]</icon>
			<property name="LongDay">$INFO[Window(weather).Property(Daily.$PARAM[item_index].LongDay)]</property>
			<property name="Outlook">$INFO[Window(weather).Property(Daily.$PARAM[item_index].Outlook)]</property>
			<property name="Fanart">$INFO[Window(Weather).Property(Daily.$PARAM[item_index].FanartCode),resource://resource.images.weatherfanart.single/,.jpg]</property>
			<onclick>noop</onclick>
			<visible>!String.IsEmpty(Window(weather).Property(Daily.IsFetched)) + !String.IsEmpty(Window(weather).Property(Daily.$PARAM[item_index].Outlook)) + !String.IsEqual(Window(home).Property(Hourly),true)</visible>
		</item>
	</include>
	<include name="WeatherDayItem">
		<item>
			<label>$VAR[Day$PARAM[item_index]]</label>
			<label2>$INFO[Window(weather).Property(Day$PARAM[item_index].LowTemp)]$INFO[System.TemperatureUnits] ∙ $INFO[Window(weather).Property(Day$PARAM[item_index].HighTemp)]$INFO[System.TemperatureUnits]</label2>
			<property name="LongDay">$INFO[Window(weather).Property(Day$PARAM[item_index].Title)]</property>
			<property name="Outlook">$INFO[Window(weather).Property(Day$PARAM[item_index].Outlook)]</property>
			<property name="Fanart">$INFO[Window(Weather).Property(Day$PARAM[item_index].FanartCode),resource://resource.images.weatherfanart.single/,.jpg]</property>
			<icon>$INFO[Window(weather).Property(Day$PARAM[item_index].OutlookIcon)]</icon>
			<onclick>noop</onclick>
			<visible>String.IsEmpty(Window(weather).Property(Daily.IsFetched)) + !String.IsEmpty(Window(weather).Property(Day$PARAM[item_index].Outlook)) + !String.IsEqual(Window(home).Property(Hourly),true)</visible>
		</item>
	</include>
	<include name="ParamWidgetInclude">
		<control id="$PARAM[ID]1" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-1]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-1)]</content>
		</control>
		<control id="$PARAM[ID]2" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-2]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-2)]</content>
		</control>
		<control id="$PARAM[ID]3" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-3]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-3)]</content>
		</control>
		<control id="$PARAM[ID]4" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-4]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-4)]</content>
		</control>
		<control id="$PARAM[ID]5" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-5]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-5)]</content>
		</control>
		<control id="$PARAM[ID]6" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-6]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-6)]</content>
		</control>
		<control id="$PARAM[ID]7" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-7]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-7)]</content>
		</control>
		<control id="$PARAM[ID]8" type="list">
			<include>HiddenList</include>
			<content sortby="$VAR[$PARAM[ID]0-SortBy-8]" limit="6">$INFO[Skin.String($PARAM[ID]0-WidgetList-8)]</content>
		</control>
		<control id="$PARAM[ID]" type="fixedlist">
			<left>419</left>
			<top>-253</top>
			<width>2100</width>
			<height>1500</height>
			<onup condition="!Window.IsVisible(1101)">SetProperty(BounceUp,1,Home)</onup>
			<onup>noop</onup>
			<ondown condition="!Window.IsVisible(1101)">SetProperty(BounceDown,1,Home)</ondown>
			<ondown>noop</ondown>
			<onleft>99</onleft>
			<onright>Select</onright>
			<onback>99</onback>
			<movement>1</movement>
			<preloaditems>2</preloaditems>
			<focusposition>2</focusposition>
			<viewtype label="">list</viewtype>
			<orientation>vertical</orientation>
			<scrolltime easing="inout" tween="sine">300</scrolltime>
			<include>HomeWidgetsAnimation</include>
			<include>WindowHomeFadeAnimation</include>
			<visible>String.IsEqual(Container(99).ListItem.Property(widget),$PARAM[widget])</visible>
			<animation condition="String.IsEqual(Container($PARAM[ID]).NumItems,1)" effect="slide" end="-304,-114">Conditional</animation>
			<animation condition="String.IsEqual(Container($PARAM[ID]).NumItems,2)" effect="slide" end="0,-299">Conditional</animation>
			<animation condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,2) + !Container($PARAM[ID]).Row(1)" easing="inout" effect="slide" end="0,-114" time="220" tween="sine">Conditional</animation>
			<animation condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(3) + Control.HasFocus($PARAM[ID])" easing="inout" effect="slide" end="0,-212" time="220" tween="sine">Conditional</animation>
			<itemlayout height="370" width="2000">
				<control type="group">
					<left>33</left>
					<control type="image">
						<width>227</width>
						<height>334</height>
						<texture border="0,15,11,14">home/home_button_nf.png</texture>
					</control>
					<control type="textbox">
						<left>14</left>
						<top>22</top>
						<width>191</width>
						<height>152</height>
						<font>Bold26</font>
						<align>left</align>
						<textcolor>ffdadada</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</control>
				<include>HomePosterItemlayout</include>
				<include>HomeWideItemlayout</include>
				<include>HomeSquareItemlayout</include>
				<include>HomeSquareInfoItemlayout</include>
			</itemlayout>
			<focusedlayout height="370" width="2000" condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,1)">
				<control type="button">
					<include>HiddenControl</include>
					<onfocus condition="String.IsEqual(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(2)">SetProperty(FocusRow,1_2)</onfocus>
					<onfocus condition="String.IsEqual(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(3)">SetProperty(FocusRow,2_2)</onfocus>
					<onfocus condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(1)">SetProperty(FocusRow,1_3)</onfocus>
					<onfocus condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(2)">SetProperty(FocusRow,2_3)</onfocus>
					<onfocus condition="Integer.IsGreater(Container($PARAM[ID]).NumItems,2) + Container($PARAM[ID]).Row(3)">SetProperty(FocusRow,3_3)</onfocus>
					<onfocus condition="String.IsEqual(Container($PARAM[ID]).ListItem.Property(WidgetStyle),$LOCALIZE[31159])">SetProperty(ForceViewType,wide,Home)</onfocus>
					<onfocus condition="String.IsEqual(Container($PARAM[ID]).ListItem.Property(WidgetStyle),$LOCALIZE[31160])">SetProperty(ForceViewType,poster,Home)</onfocus>
					<onfocus condition="!String.IsEqual(Container($PARAM[ID]).ListItem.Property(WidgetStyle),$LOCALIZE[31159]) + !String.IsEqual(Container($PARAM[ID]).ListItem.Property(WidgetStyle),$LOCALIZE[31160])">ClearProperty(ForceViewType,Home)</onfocus>
				</control>
				<control type="group">
					<animation center="142,167" easing="inout" effect="zoom" end="132" start="100" time="220" tween="sine">Focus</animation>
					<animation center="142,167" easing="inout" effect="zoom" end="100" start="132" time="220" tween="sine">UnFocus</animation>
					<control type="group">
						<left>33</left>
						<control type="image">
							<width>227</width>
							<height>334</height>
							<texture border="0,15,11,14">home/home_button_nf.png</texture>
						</control>
						<control type="textbox">
							<top>2</top>
							<width>254</width>
							<height>200</height>
							<font>Bold34</font>
							<align>left</align>
							<textcolor>ffdadada</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="fade" end="0" start="100" time="0">Focus</animation>
							<animation condition="true" effect="slide" end="-18,-26" time="0">Conditional</animation>
							<animation center="135,201" condition="true" effect="zoom" end="76" start="76" time="0">Conditional</animation>
						</control>
						<control type="image">
							<width>227</width>
							<height>334</height>
							<texture border="0,14,11,14">home/home_button_fo.png</texture>
							<visible>!String.IsEmpty(Window(Home).Property(WidgetHasFocus))</visible>
							<animation effect="fade" end="100" start="0" time="0" condition="!String.IsEmpty(Window(Home).Property(WidgetHasFocus))">Conditional</animation>
							<animation effect="fade" end="0" start="100" time="0" condition="String.IsEmpty(Window(Home).Property(WidgetHasFocus))">Conditional</animation>
							<animation effect="fade" end="100" start="0" time="0">Focus</animation>
							<animation effect="fade" end="0" start="100" time="0">UnFocus</animation>
						</control>
						<control type="textbox">
							<top>2</top>
							<width>254</width>
							<height>200</height>
							<font>Bold34</font>
							<align>left</align>
							<textcolor>ff453a18</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<visible>!String.IsEmpty(Window(Home).Property(WidgetHasFocus))</visible>
							<animation effect="fade" end="100" start="0" time="0" condition="!String.IsEmpty(Window(Home).Property(WidgetHasFocus))">Conditional</animation>
							<animation effect="fade" end="0" start="100" time="0" condition="String.IsEmpty(Window(Home).Property(WidgetHasFocus))">Conditional</animation>
							<animation effect="fade" end="100" start="0" time="0">Focus</animation>
							<animation effect="fade" end="0" start="100" time="0">UnFocus</animation>
							<animation condition="true" effect="slide" end="-18,-26" time="0">Conditional</animation>
							<animation center="135,201" condition="true" effect="zoom" end="76" start="76" time="0">Conditional</animation>
						</control>
					</control>
					<include>HomePosterFocusedlayout</include>
					<include>HomeWideFocusedlayout</include>
					<include>HomeSquareFocusedlayout</include>
					<include>HomeSquareInfoFocusedlayout</include>
				</control>
			</focusedlayout>
			<focusedlayout height="370" width="2000" condition="!Integer.IsGreater(Container($PARAM[ID]).NumItems,1)">
				<control type="group">
					<animation center="142,167" condition="true" effect="zoom" end="132" start="100" time="0">Conditional</animation>
					<include>HomePosterFocusedlayout</include>
					<include>HomeWideFocusedlayout</include>
					<include>HomeSquareFocusedlayout</include>
					<include>HomeSquareInfoFocusedlayout</include>
				</control>
			</focusedlayout>
			<include>$PARAM[content]</include>
		</control>
	</include>
</includes>
