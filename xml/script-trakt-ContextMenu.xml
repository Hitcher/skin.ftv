<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- script-trakt-ContextMenu.xml -->
	<defaultcontrol always="true">111</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Dialog group -->
		<control type="group">
			<include>DialogAnimation</include>
			<centerleft>50%</centerleft>
			<top>336</top>
			<width>614</width>
			<height>408</height>
			<!-- Dialog background image -->
			<control type="image">
				<width>100%</width>
				<height>100%</height>
				<texture>dialogs/trakt-context-bg.png</texture>
			</control>
			<!-- List -->
			<control type="list" id="111">
				<left>52</left>
				<top>52</top>
				<width>510</width>
				<height>304</height>
				<onup>111</onup>
				<ondown>111</ondown>
				<onleft>111</onleft>
				<onright>111</onright>
				<scrolltime>200</scrolltime>
				<itemlayout height="76" width="510">
					<control type="image">
						<width>510</width>
						<height>76</height>
						<texture border="8">dialogs/DialogButtonNF.png</texture>
					</control>
					<control type="label">
						<top>1</top>
						<width>510</width>
						<height>76</height>
						<font>MedUpper24</font>
						<textcolor>ffd8d8d8</textcolor>
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="76" width="510">
					<control type="image">
						<width>510</width>
						<height>76</height>
						<texture border="8">dialogs/DialogButtonFO.png</texture>
					</control>
					<control type="label">
						<top>1</top>
						<width>510</width>
						<height>76</height>
						<font>MedUpper24</font>
						<textcolor>ff000000</textcolor>
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
