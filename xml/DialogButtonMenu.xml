<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- shutdownmenu -->
	<defaultcontrol always="true">6000</defaultcontrol>
	<animation type="WindowOpen">
		<effect center="auto" tween="circle" easing="out" end="100" start="110" time="400" type="zoom"/>
		<effect easing="inout" end="100" start="0" time="400" tween="sine" type="fade"/>
	</animation>
	<animation easing="inout" effect="fade" end="0" start="100" time="400" tween="sine">WindowClose</animation>
	<controls>
		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>special://skin/extras/backgrounds/shutdown.png</texture>
		</control>
		<!-- Time -->
		<control type="grouplist">
			<centerleft>50%</centerleft>
			<top>344</top>
			<width>3840</width>
			<height>296</height>
			<align>center</align>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<control type="label">
				<width>auto</width>
				<height>296</height>
				<label>$INFO[System.Time(HH)]</label>
				<font>Light148</font>
				<textcolor>ffbfbcbb</textcolor>
			</control>
			<control type="group">
				<width>80</width>
				<height>296</height>
				<visible>String.EndsWith(System.Time(ss),0) | String.EndsWith(System.Time(ss),2) | String.EndsWith(System.Time(ss),4) | String.EndsWith(System.Time(ss),6) | String.EndsWith(System.Time(ss),8)</visible>
				<control type="label">
					<top>84</top>
					<width>80</width>
					<height>40</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>ffbfbcbb</textcolor>
				</control>
				<control type="label">
					<top>192</top>
					<width>80</width>
					<height>40</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>ffbfbcbb</textcolor>
				</control>
			</control>
			<control type="group">
				<width>80</width>
				<height>296</height>
				<visible>String.EndsWith(System.Time(ss),1) | String.EndsWith(System.Time(ss),3) | String.EndsWith(System.Time(ss),5) | String.EndsWith(System.Time(ss),7) | String.EndsWith(System.Time(ss),9)</visible>
				<control type="label">
					<top>84</top>
					<width>80</width>
					<height>40</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>88bfbcbb</textcolor>
				</control>
				<control type="label">
					<top>192</top>
					<width>80</width>
					<height>40</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>88bfbcbb</textcolor>
				</control>
			</control>
			<control type="label">
				<width>auto</width>
				<height>296</height>
				<label>$INFO[System.Time(mm)]</label>
				<font>Light148</font>
				<textcolor>ffbfbcbb</textcolor>
			</control>
			<control type="label">
				<top>158</top>
				<width>auto</width>
				<height>116</height>
				<label>$INFO[System.Time(xx)]</label>
				<font>Med58</font>
				<textcolor>ffbfbcbb</textcolor>
				<visible>!String.IsEmpty(System.Time(xx))</visible>
			</control>
		</control>
		<!-- List -->
		<control id="6000" type="fixedlist">
			<centerleft>50%</centerleft>
			<top>1084</top>
			<width>3192</width>
			<height>456</height>
			<scrolltime>0</scrolltime>
			<focusposition>3</focusposition>
			<movement>3</movement>
			<orientation>horizontal</orientation>
			<defaultcontrol always="true">1</defaultcontrol>
			<animation effect="slide" time="0" end="-228,0" condition="String.IsEqual(Container(6000).NumItems,2) | String.IsEqual(Container(6000).NumItems,4) | String.IsEqual(Container(6000).NumItems,6)">Conditional</animation>
			<itemlayout height="456" width="456">
				<control type="image">
					<left>40</left>
					<width>376</width>
					<height>376</height>
					<texture>common/button_nf.png</texture>
				</control>
				<control type="image">
					<left>140</left>
					<top>32</top>
					<width>176</width>
					<height>176</height>
					<texture fallback="shutdown/DefaultShortcut.png">$INFO[ListItem.Icon,shutdown/]</texture>
				</control>
				<control type="textbox">
					<left>60</left>
					<top>204</top>
					<width>336</width>
					<height>132</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Med23Spaced</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>ffa5a5a6</textcolor>
				</control>
			</itemlayout>
			<focusedlayout height="456" width="456">
				<control type="image">
					<left>40</left>
					<width>376</width>
					<height>376</height>
					<texture border="6">common/button_fo.png</texture>
				</control>
				<control type="image">
					<left>140</left>
					<top>32</top>
					<width>176</width>
					<height>176</height>
					<colordiffuse>d9000000</colordiffuse>
					<texture fallback="shutdown/DefaultShortcut.png">$INFO[ListItem.Icon,shutdown/]</texture>
				</control>
				<control type="textbox">
					<left>60</left>
					<top>204</top>
					<width>336</width>
					<height>132</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Med23Spaced</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>ff000000</textcolor>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-group-shutdown</include>
			</content>
		</control>
	</controls>
</window>
